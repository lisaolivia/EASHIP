<Page x:Class="Eaship.page.Pagelanding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="700"
      Title="Pagelanding">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <!-- Navbar -->
            <RowDefinition/>
            <!-- Content -->
            <RowDefinition Height="60"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ======= NAVBAR ========== -->
        <Border Grid.Row="0" Background="#123B61">
            <Grid Margin="24,0">
                <TextBlock Text="⛴ Eaship"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
            </Grid>
        </Border>

        <!-- ========== MAIN CONTENT ========== -->
        <Grid Grid.Row="1">
            <StackPanel Width="540"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <!-- Judul -->
                <TextBlock Text="Sign Up"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>

                <!-- Form -->
                <Border BorderBrush="#C7CBD1"
                        BorderThickness="1"
                        Padding="24"
                        CornerRadius="8">
                    <StackPanel>
                        <!-- Role -->
                        <TextBlock Text="Select Role"
                                   Margin="0,0,0,6"
                                   FontWeight="SemiBold"/>
                        <ComboBox Height="34"
                                  Margin="0,0,0,12"
                                  BorderBrush="#9CA3AF"
                                  BorderThickness="1" SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem Content="Owner"/>
                            <ComboBoxItem Content="Renter"/>
                            <ComboBoxItem Content="Admin"/>
                        </ComboBox>

                        <!-- Full name -->
                        <TextBlock Text="Full Name"
                                   Margin="0,0,0,6"
                                   FontWeight="SemiBold"/>
                        <TextBox Height="34"
                                 Margin="0,0,0,12"
                                 BorderBrush="#9CA3AF"
                                 BorderThickness="1"
                                 Background="#F5F6F8"/>

                        <!-- Email -->
                        <TextBlock Text="Email Id"
                                   Margin="0,0,0,6"
                                   FontWeight="SemiBold"/>
                        <TextBox Height="34"
                                 Margin="0,0,0,12"
                                 BorderBrush="#9CA3AF"
                                 BorderThickness="1"
                                 Background="#F5F6F8"/>

                        <!-- Phone -->
                        <TextBlock Text="Number Phone"
                                   Margin="0,0,0,6"
                                   FontWeight="SemiBold"/>
                        <TextBox Height="34"
                                 Margin="0,0,0,12"
                                 BorderBrush="#9CA3AF"
                                 BorderThickness="1"
                                 Background="#F5F6F8"/>

                        <!-- Password -->
                        <TextBlock Text="Password"
                                   Margin="0,0,0,6"
                                   FontWeight="SemiBold"/>
                        <PasswordBox Height="34"
                                     Margin="0,0,0,12"
                                     BorderBrush="#9CA3AF"
                                     BorderThickness="1"
                                     Background="#F5F6F8"/>

                        <!-- Confirm PW-->
                        <TextBlock Text="Confirm Password"
                                   Margin="0,0,0,6"
                                   FontWeight="SemiBold"/>
                        <PasswordBox Height="34"
                                     Margin="0,0,0,20"
                                     BorderBrush="#9CA3AF"
                                     BorderThickness="1"
                                     Background="#F5F6F8"/>

                        <!-- Tombol -->
                        <Button Content="Sign Up"
                                Height="38"
                                Background="#123B61"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- ========== FOOTER ========== -->
        <Border Grid.Row="2" Background="#D9E8F4">
            <TextBlock Text="© 2025 Eaship Company"
                       Foreground="#4B5563"
                       FontSize="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
