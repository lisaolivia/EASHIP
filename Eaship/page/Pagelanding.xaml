<Page x:Class="Eaship.page.Pagelanding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
      Title="EaShip - Landing">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Helper margin styles -->
            <Style x:Key="HStackGap6" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="6,0,0,0"/>
            </Style>
            <Style x:Key="VStackGap12" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="0,12,0,0"/>
            </Style>
            <Style x:Key="VStackGap16" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="0,16,0,0"/>
            </Style>
            <Style x:Key="VStackGap18" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="0,18,0,0"/>
            </Style>
            <Style x:Key="VStackGap20" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
            <Style x:Key="VStackGap48" TargetType="FrameworkElement">
                <Setter Property="Margin" Value="0,48,0,0"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- NAVBAR -->
        <Border Background="{StaticResource NavyBrush}" Grid.Row="0">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/logoputih.png" Width="86" Height="59"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                    <Button x:Name="BtnBarges" 
                            Style="{StaticResource NavButton}" 
                            Content="Barges" 
                            Click="Button_Click_2"/>

                    <Button x:Name="BtnBookings"
                            Style="{StaticResource NavButton}" 
                            Content="My Bookings"
                            Margin="6,0,0,0"
                            Click="Button_Click_3"/>

                    <Button x:Name="BtnInvoice"
                            Style="{StaticResource NavButton}" 
                            Content="Invoice"
                            Margin="6,0,0,0"
                            Click="Button_Click_1"/>

                    <Button x:Name="BtnHelp"
                            Style="{StaticResource NavButton}" 
                            Content="Help"
                            Margin="6,0,0,0"
                            Click="Button_Click"/>

                    <Button x:Name="BtnProfile"
                            Style="{StaticResource OutlineButton}" 
                            Content="Profile"
                            Margin="6,0,0,0"
                            Click="SignUp_Click"/>

                    <Button x:Name="BtnSignup"
                            Style="{StaticResource OutlineButton}" 
                            Content="Sign Up"
                            Margin="6,0,0,0"
                            Click="SignUp_Click"/>

                    <Button x:Name="BtnLogin"
                            Background="Black" Foreground="White"
                            Padding="12,6"
                            Content="Log In"
                            Margin="6,0,0,0"
                            Click="Login_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="56,36">

                <!-- HERO -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,12,24,0">
                        <TextBlock Style="{StaticResource H1}" Text="Hi, Shippers! "/>
                        <TextBlock Style="{StaticResource Body}" Foreground="{StaticResource MutedBrush}" 
                                   Margin="0,16,0,0">
                            Eaship simplifies how you book ships and barges with smart management in one platform.
                            Designed for business and individuals, Eaship connects you directly with verified operators
                            for smooth, reliable, and cost-efficient maritime logistics.
                        </TextBlock>
                    </StackPanel>

                    <!-- Illustration -->
                    <Border Grid.Column="1" Height="204" Background="{StaticResource SkyBrush}"
                            CornerRadius="12" VerticalAlignment="Top" Margin="79,0,10,0">
                        <Image Source="/Assets/gambar1.png" Stretch="Uniform" Margin="0,0,6,0"/>
                    </Border>
                </Grid>

                <!-- Spacer ~48 -->
                <Border Height="1" Opacity="0" Style="{StaticResource VStackGap48}"/>

                <!-- WHY CHOOSE -->
                <StackPanel>
                    <TextBlock Text="Why Choose Eaship?" Style="{StaticResource H2}" Height="41" Width="1148"/>

                    <StackPanel Margin="0,20,0,0">
                        <!-- 1 -->
                        <DockPanel>
                            <Border Style="{StaticResource CircleBadge}">
                                <TextBlock Text="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="Bold" Foreground="{StaticResource NavyBrush}"/>
                            </Border>
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="16">
                                    <Run Text="⚓ "/><Run Text="Smart &amp; Fast Booking"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Foreground="{StaticResource MutedBrush}" 
                                           Margin="0,6,0,0">
                                    Find and reserve ships or barges in minutes. Connect directly with trusted operators—no long calls or complicated paperwork.
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>

                        <!-- 2 -->
                        <DockPanel Margin="0,18,0,0">
                            <Border Style="{StaticResource CircleBadge}">
                                <TextBlock Text="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="Bold" Foreground="{StaticResource NavyBrush}"/>
                            </Border>
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="16">
                                    <Run Text="📦 "/><Run Text="Transparent &amp; Reliable Service"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Foreground="{StaticResource MutedBrush}" 
                                           Margin="0,6,0,0">
                                    Instant price comparisons, verified fleets, and guaranteed transparency.
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>

                        <!-- 3 -->
                        <DockPanel Margin="0,18,0,0">
                            <Border Style="{StaticResource CircleBadge}">
                                <TextBlock Text="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="Bold" Foreground="{StaticResource NavyBrush}"/>
                            </Border>
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="16">
                                    <Run Text="🌊 "/><Run Text="Real-Time Tracking &amp; Support"/>
                                </TextBlock>
                                <TextBlock Style="{StaticResource Body}" Foreground="{StaticResource MutedBrush}" 
                                           Margin="0,6,0,0">
                                    Track shipments from port to port and get 24/7 support.
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </StackPanel>

                <!-- CTA -->
                <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                    <TextBlock Text="EaShip" Style="{StaticResource H2}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Your Easy Way to Book Ships and Barges"
                               Foreground="{StaticResource MutedBrush}" FontSize="16"
                               HorizontalAlignment="Center" Margin="0,12,0,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D6E3F2" Margin="0,60,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved. Address Address"/>
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No. 01 | support@eaship.com" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
