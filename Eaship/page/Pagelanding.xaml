<Page x:Class="Eaship.page.Pagelanding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"   
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="EaShip - Landing">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Circle Badge Style -->
            <Style x:Key="NumberCircle" TargetType="Border">
                <Setter Property="Width" Value="50"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="Background" Value="#1E3A5F"/>
                <Setter Property="Margin" Value="0,0,16,0"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- NAVBAR -->
        <Border Background="#1E3A5F" Grid.Row="0">
            <Grid Margin="48,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand -->
                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Brand_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>

                    <Image Source="pack://application:,,,/Eaship;component/Assets/logo2.png"
                            Width="86" Height="59" RenderTransformOrigin="0.5,0.775"/>
                </Button>

                <!-- Center Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="BtnBarges" Content="Barges" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnBarges_Click"/>
                    <Button x:Name="BtnBookings" Content="My Bookings" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnBookings_Click"/>
                     <Button x:Name="BtnContract" Content="Contract" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnContract_Click"/>
                    <Button x:Name="Btnnotifikasi" 
                        Style="{StaticResource NavButton}" 
                        Content="Notifikasi"         
                        Margin="6,0,0,0"          
                        Click="Buttonnotifikasi_Click"/>
                    <Button x:Name="BtnProfile" Content="Profile" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnProfile_Click"/>
                </StackPanel>

                <!-- Right Menu -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnSignup" Content="SignUp" Foreground="White" Background="Transparent" 
                            BorderBrush="White" BorderThickness="1" Padding="20,8" FontSize="14" 
                            Cursor="Hand" Margin="0,0,12,0" Click="SignUp_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="BtnLogin" Content="Login" Foreground="White" Background="#000000" 
                            BorderThickness="0" Padding="24,8" FontSize="14" Cursor="Hand" Click="Login_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT - No ScrollViewer -->
        <Grid Grid.Row="1" Margin="60,30,60,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Content -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,40,0">
                <!-- Hero Section -->
                <TextBlock FontSize="38" FontWeight="Bold" Foreground="#1A1A1A" TextWrapping="Wrap">
                    <Run Text="Hi, Shippers! "/><Run Text="ðŸ‘‹"/>
                </TextBlock>

                <TextBlock Text="Eaship simplifies how you book ships and barges with smart management in one platform. Designed for business and individuals, Eaship connects you directly with verified operators for smooth, reliable, and cost-efficient maritime logistics."
                           FontSize="13" Foreground="#666666" TextWrapping="Wrap" Margin="0,16,0,0" LineHeight="20"/>

                <!-- Why Choose Section -->
                <TextBlock Text="Why Choose Eaship?" FontSize="26" FontWeight="Bold" Foreground="#1A1A1A" Margin="0,36,0,20"/>

                <!-- Feature 1 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource NumberCircle}">
                        <TextBlock Text="1" FontSize="20" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBlock FontSize="15" FontWeight="SemiBold" Foreground="#1A1A1A">
                            <Run Text="âš“ Smart &amp; Fast Booking"/>
                        </TextBlock>
                        <TextBlock Text="Find and reserve ships or barges in minutes. Eaship connects you directly with trusted operators, no more long calls or complicated paperwork."
                                   FontSize="12" Foreground="#666666" TextWrapping="Wrap" Margin="0,6,0,0" LineHeight="18"/>
                    </StackPanel>
                </Grid>

                <!-- Feature 2 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource NumberCircle}">
                        <TextBlock Text="2" FontSize="20" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBlock FontSize="15" FontWeight="SemiBold" Foreground="#1A1A1A">
                            <Run Text="ðŸ“¦ Transparent &amp; Reliable Service"/>
                        </TextBlock>
                        <TextBlock Text="Get instant price comparisons, verified fleets, and guaranteed transparency in every transaction. What you see is what you pay."
                                   FontSize="12" Foreground="#666666" TextWrapping="Wrap" Margin="0,6,0,0" LineHeight="18"/>
                    </StackPanel>
                </Grid>

                <!-- Feature 3 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource NumberCircle}">
                        <TextBlock Text="3" FontSize="20" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBlock FontSize="15" FontWeight="SemiBold" Foreground="#1A1A1A">
                            <Run Text="ðŸš¢ Real-Time Tracking &amp; Support"/>
                        </TextBlock>
                        <TextBlock Text="Track your shipments from port to port and get 24/7 customer support. Eaship keeps you informed every step of the way."
                                   FontSize="12" Foreground="#666666" TextWrapping="Wrap" Margin="0,6,0,0" LineHeight="18"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Right Content - CTA Section -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Ship Illustration -->
                <Border Width="300" Height="300" Background="#87CEEB" CornerRadius="150" 
                        HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Image Source="/Assets/gambar1.png" Stretch="Uniform" Margin="20"/>
                </Border>

                <!-- CTA Text -->
                <TextBlock Text="EaShip" FontSize="30" FontWeight="Bold" Foreground="#1A1A1A" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Your Easy Way to Book Ships and Barges" FontSize="13" 
                           Foreground="#666666" HorizontalAlignment="Center" Margin="0,8,0,0"/>

                <!-- Book Ship Button -->
                <Button x:Name="BtnBookShip" Content="Book Ship â†’" FontSize="14" FontWeight="SemiBold"
                        Foreground="White" Background="#1E3A5F" BorderThickness="0"
                        Padding="40,12" Margin="0,24,0,0" Cursor="Hand" Click="BookShip_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#152A44"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Â© 2000 - Company, Inc. All rights reserved. Address Address" 
                           FontSize="11" Foreground="#666666" HorizontalAlignment="Center"/>
                <TextBlock Text="+62812345 | Jl.Teti Sejati No.01|support@eaship.com" 
                           FontSize="11" Foreground="#666666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

