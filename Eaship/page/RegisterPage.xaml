<Page x:Class="Eaship.page.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="700"
      Title="RegisterPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <!-- Navbar -->
            <RowDefinition/>
            <!-- Content -->
            <RowDefinition Height="60"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ========== NAVBAR ========== -->
        <Border Background="{StaticResource NavyBrush}" Grid.Row="0">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/logoputih.png" Width="86" Height="59"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnBarges"
                            Style="{StaticResource NavButton}" 
                            Content="Barges"
                            Click="Button_Click"/>

                    <Button x:Name="BtnBookings"
                            Style="{StaticResource NavButton}" 
                            Content="My Bookings"  
                            Margin="6,0,0,0"
                            Click="Button_Click_1"/>

                    <Button x:Name="BtnInvoice"
                            Style="{StaticResource NavButton}" 
                            Content="Invoice"
                            Margin="6,0,0,0"/>

                    <Button x:Name="BtnHelp"
                            Style="{StaticResource NavButton}" 
                            Content="Help"
                            Margin="6,0,0,0"
                            Click="Button_Click_2"/>

                    <Button x:Name="BtnProfile"
                            Style="{StaticResource OutlineButton}" 
                            Content="Profile"
                            Margin="6,0,0,0"/>

                    <Button x:Name="BtnSignupNav"
                            Style="{StaticResource OutlineButton}" 
                            Content="Sign Up"
                            Margin="6,0,0,0"
                            Click="SignUp_Click"/>

                    <Button x:Name="BtnLoginNav"
                            Background="Black" 
                            Foreground="White" 
                            Padding="12,6" 
                            Content="Log In"
                            Margin="6,0,0,0"
                            Click="Login_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== MAIN CONTENT ========== -->
        <Grid Grid.Row="1">
            <StackPanel Width="540"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <!-- Judul -->
                <TextBlock Text="Create Account"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>

                <!-- Form -->
                <Border BorderBrush="#C7CBD1"
                        BorderThickness="1"
                        Padding="24"
                        CornerRadius="8"
                        Height="502"
                        Width="542">

                    <StackPanel Width="460" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center">

                        <!-- FULL NAME -->
                        <TextBlock Text="Full Name" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtFullName"
                                 Height="34" 
                                 BorderBrush="#9CA3AF" 
                                 BorderThickness="1"
                                 Background="#F5F6F8" 
                                 Margin="0,0,0,12"/>

                        <!-- EMAIL -->
                        <TextBlock Text="Email" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtEmail"
                                 Height="34" 
                                 BorderBrush="#9CA3AF" 
                                 BorderThickness="1"
                                 Background="#F5F6F8" 
                                 Margin="0,0,0,12"/>

                        <!-- PASSWORD -->
                        <TextBlock Text="Password" Margin="0,0,0,6"/>
                        <PasswordBox x:Name="txtPassword"
                                     Height="34" 
                                     BorderBrush="#9CA3AF" 
                                     BorderThickness="1"
                                     Background="#F5F6F8" 
                                     Margin="0,0,0,12"/>

                        <!-- CONFIRM PASSWORD -->
                        <TextBlock Text="Confirm Password" Margin="0,0,0,6"/>
                        <PasswordBox x:Name="txtConfirm"
                                     Height="34" 
                                     BorderBrush="#9CA3AF" 
                                     BorderThickness="1"
                                     Background="#F5F6F8" 
                                     Margin="0,0,0,16"/>

                        <!-- REGISTER BUTTON -->
                        <Button x:Name="BtnRegister"
                                Content="Register" 
                                Height="38" 
                                Background="#123B61"
                                Foreground="White" 
                                BorderThickness="0" 
                                FontWeight="SemiBold"
                                Click="Register_Click"/>

                        <!-- BACK TO LOGIN -->
                        <Button x:Name="BtnGoLogin"
                                Content="Back to Login" 
                                Margin="0,12,0,0"
                                Style="{StaticResource NavButton}"
                                Foreground="{StaticResource NavyBrush}"
                                Click="GoLogin_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- ========== FOOTER ========== -->
        <Border Grid.Row="2" Background="#D9E8F4">
            <TextBlock Text="© 2025 Eaship Company"
                       Foreground="#4B5563"
                       FontSize="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
