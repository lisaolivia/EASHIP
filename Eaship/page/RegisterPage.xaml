<Page x:Class="Eaship.page.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignWidth="1280" d:DesignHeight="720"
      Title="RegisterPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- ========== NAVBAR ========== -->
        <Border Background="#1E3A5F" Grid.Row="0">
            <Grid Margin="48,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Viewbox Width="28" Height="28" Margin="0,0,12,0">
                        <Canvas Width="24" Height="24">
                            <Path Fill="White" Data="M20,21c-1.39,0-2.78-0.47-4-1.32c-2.44,1.71-5.56,1.71-8,0C6.78,20.53,5.39,21,4,21H2v-2h2c1.38,0,2.74-0.35,4-0.99 c1.26,0.64,2.62,0.99,4,0.99s2.74-0.35,4-0.99c1.26,0.64,2.62,0.99,4,0.99h2v2H20z M3.95,19.03C3.31,18.71,2.67,18.47,2,18.31 v-2.02c0.67,0.16,1.31,0.4,1.95,0.72C3.96,17.68,3.96,18.36,3.95,19.03z M6.05,16.08c-0.38-0.22-0.77-0.42-1.17-0.59l1.17-1.7 c0.4,0.18,0.79,0.38,1.17,0.6L6.05,16.08z M8.17,14.45l-1.23-1.67c0.41-0.22,0.83-0.42,1.27-0.59l1,1.8 C8.83,14.13,8.49,14.28,8.17,14.45z M10.63,13.34l-0.86-1.87c0.44-0.17,0.89-0.3,1.35-0.4l0.68,1.95 C11.36,13.09,10.99,13.2,10.63,13.34z"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="EaShip" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Center Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="BtnBarges" Content="Barges" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="Button_Click"/>
                    <Button x:Name="BtnBookings" Content="My Bookings" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="Button_Click_1"/>
                    <Button x:Name="BtnInvoice" Content="Invoice" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand"/>
                    <Button x:Name="BtnHelp" Content="Help" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="Button_Click_2"/>
                    <Button x:Name="BtnProfile" Content="Profile" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand"/>
                </StackPanel>

                <!-- Right Menu -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnSignupNav" Content="SignUp" Foreground="White" Background="Transparent" 
                            BorderBrush="White" BorderThickness="1" Padding="20,8" FontSize="14" 
                            Cursor="Hand" Margin="0,0,12,0" Click="SignUp_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="BtnLoginNav" Content="Login" Foreground="White" Background="#000000" 
                            BorderThickness="0" Padding="24,8" FontSize="14" Cursor="Hand" Click="Login_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== MAIN CONTENT ========== -->
        <Grid Grid.Row="1">
            <StackPanel Width="520" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Sign up" FontSize="32" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,2" Foreground="#1A1A1A"/>

                <!-- Form Container -->
                <Border BorderBrush="#D1D5DB" BorderThickness="1" Padding="20,12" 
                        CornerRadius="8" Background="White">
                    <StackPanel Width="440">

                        <!-- SELECT ROLE -->
                        <TextBlock Text="Select Role" FontSize="13" Foreground="#1A1A1A" Margin="0,0,0,6"/>
                        <ComboBox x:Name="cmbRole" Height="38" BorderBrush="#D1D5DB" BorderThickness="1"
                                  Background="White" Padding="12,9" FontSize="13" Foreground="#1A1A1A"
                                  Margin="0,0,0,14">
                            <ComboBoxItem Content="Renter" IsSelected="True"/>
                            <ComboBoxItem Content="Admin"/>
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>

                        <!-- FULL NAME -->
                        <TextBlock Text="Full Name" FontSize="13" Foreground="#1A1A1A" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtFullName" Height="38" BorderBrush="#D1D5DB" BorderThickness="1"
                                 Background="White" Padding="12,9" FontSize="13" Foreground="#9CA3AF"
                                 Text="First name" Margin="0,0,0,14">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- EMAIL ID -->
                        <TextBlock Text="Email Id" FontSize="13" Foreground="#1A1A1A" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtEmail" Height="38" BorderBrush="#D1D5DB" BorderThickness="1"
                                 Background="White" Padding="12,9" FontSize="13" Foreground="#9CA3AF"
                                 Text="Enter email id" Margin="0,0,0,14">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- NUMBER PHONE -->
                        <TextBlock Text="Number Phone" FontSize="13" Foreground="#1A1A1A" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtPhone" Height="38" BorderBrush="#D1D5DB" BorderThickness="1"
                                 Background="White" Padding="12,9" FontSize="13" Foreground="#9CA3AF"
                                 Text="Search your address" Margin="0,0,0,14">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- PASSWORDS -->
                        <TextBlock Text="Passwords" FontSize="13" Foreground="#1A1A1A" Margin="0,0,0,6"/>
                        <PasswordBox x:Name="txtPassword" Height="38" BorderBrush="#D1D5DB" BorderThickness="1"
                                     Background="White" Padding="12,9" FontSize="13" Margin="0,0,0,14">
                            <PasswordBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>

                        <!-- CONFIRM PASSWORDS -->
                        <TextBlock Text="confirm passwords" FontSize="13" Foreground="#1A1A1A" Margin="0,0,0,6"/>
                        <PasswordBox x:Name="txtConfirm" Height="38" BorderBrush="#D1D5DB" BorderThickness="1"
                                     Background="White" Padding="12,9" FontSize="13" Margin="0,0,0,20">
                            <PasswordBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>

                        <!-- SIGN UP BUTTON -->
                        <Button x:Name="BtnRegister" Content="Sign up" Height="42" 
                                Background="#1E3A5F" Foreground="White" BorderThickness="0" 
                                FontWeight="SemiBold" FontSize="14" Cursor="Hand" Click="Register_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#152A44"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- ========== FOOTER ========== -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="© 2000 - Company, Inc. All rights reserved. Address Address" 
                           FontSize="11" Foreground="#666666" HorizontalAlignment="Center"/>
                <TextBlock Text="+62812345 | Jl.Teti Sejati No.01|support@eaship.com" 
                           FontSize="11" Foreground="#666666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>