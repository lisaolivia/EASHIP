<Page x:Class="Eaship.page.Admin.ListCompany"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="ListCompany">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="StatusTemplate">
                <Border CornerRadius="12" Padding="6 2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E2E8F0"/>

                            <Style.Triggers>

                                <DataTrigger Binding="{Binding Status}" Value="Draft">
                                    <Setter Property="Background" Value="#E2E8F0"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Status}" Value="Validating">
                                    <Setter Property="Background" Value="#FFF3CD"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Status}" Value="Active">
                                    <Setter Property="Background" Value="#C6F6D5"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                    <Setter Property="Background" Value="#FED7D7"/>
                                </DataTrigger>

                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <TextBlock Text="{Binding Status}"
                   Foreground="#1A202C"
                   FontWeight="SemiBold"
                   FontSize="12"/>
                </Border>
            </DataTemplate>


            <!-- Header Style -->
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="10 6"/>
                <Setter Property="Background" Value="#EAECEF"/>
                <Setter Property="Foreground" Value="#111827"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>

            <!-- Row Style -->
            <Style TargetType="DataGridRow">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="White"/>
            </Style>

        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- Header -->
                <TextBlock Text="Companies"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- Table Box -->
                <Border 
                    Width="1051"
                    Height="754"
                    Background="White"
                    BorderBrush="#D6E4F0"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Effect="{StaticResource Shadow}">

                    <!-- DATAGRID -->
                    <DataGrid x:Name="CompanyTable"
                              AutoGenerateColumns="False"
                              Background="White"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserResizeRows="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              ColumnHeaderHeight="45"
                              RowHeight="40" Margin="0,0,181,114">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Company Name" Binding="{Binding Nama}" Width="*" />
                            <DataGridTextColumn Header="NPWP" Binding="{Binding NPWP}" Width="200"/>
                            <DataGridTextColumn Header="City / Province" Binding="{Binding CityProvince}" Width="200"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="160"/>
                            <DataGridTemplateColumn Header="Status" Width="120"
                                                   CellTemplate="{StaticResource StatusTemplate}"/>


                        </DataGrid.Columns>

                    </DataGrid>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
