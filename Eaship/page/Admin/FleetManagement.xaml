<Page x:Class="Eaship.page.Admin.FleetManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Fleet Management">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">
                <!-- Header -->
                <TextBlock Text="Fleet Management" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>
                <!-- Barge Big Card -->
                <!-- ===== BIG CARDS SECTION ===== -->
                <StackPanel Orientation="Horizontal"
                             Margin="0,0,0,30">

                    <!-- === CARD Barge === -->
                    <Border Width="354"
                            Height="194"
                            Background="#D6E4F0"
                            CornerRadius="20"
                            BorderThickness="1"
                            Padding="20"
                            Margin="0,0,30,0"
                            Effect="{StaticResource Shadow}">
                        
                        <!-- SPACING -->
                        <Grid>
                            <TextBlock Text="Barge"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            <Button Content="See More"
                                    Style="{StaticResource LogoutButton}"
                                    Width="90"
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Cursor="Hand"
                                    Click="SeeMoreBarge"/>
                        </Grid>
                    </Border>
                    <!-- === CARD TUGBOAT === -->
                    <Border Width="354"
                            Height="194"
                            Background="#D6E4F0"
                            BorderBrush="#4EA3FF"
                            CornerRadius="20"
                            Padding="20"
                            Effect="{StaticResource Shadow}">
                        <Grid>
                            <TextBlock Text="Tugboat"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>

                            <Button Content="See More"
                                    Style="{StaticResource LogoutButton}"
                                    Width="90"
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Cursor="Hand"
                                    Click="SeeMoreTugboat"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Section Title -->
                <TextBlock Text="Statistic"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>

                <!-- Data Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,30">

                    <!-- Barge -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="20"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="BargeCountText"
                       Text="0"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="{StaticResource NavyBrush}"
                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Barge" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- TUGBOAT -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="20"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="TugboatCountText"
                                           Text="0"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource NavyBrush}"
                                           HorizontalAlignment="Center"/>
                            <TextBlock Text="Tugboat" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
