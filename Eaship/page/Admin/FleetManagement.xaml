<Page x:Class="Eaship.page.Admin.FleetManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Fleet Management">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel VerticalAlignment="Stretch" Margin="24,40">
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Image Source="/Assets/logo2.png" Width="92" Height="49" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.678"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                </StackPanel>

                <!-- Menu Items -->
                <StackPanel>
                    <Button Style="{StaticResource NavButton}" 
                            Content="Fleet Management" 
                            Margin="0,4" 
                            Click="OpenFleetManagement"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Company Verification" 
                            Margin="0,4" 
                            Click="OpenCompanyVerification"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Booking Request" 
                            Margin="0,4" 
                            Click="OpenBookingRequest"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Contract Payment" 
                            Margin="0,4" 
                            Click="OpenContractPayment"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Profile" 
                            Margin="0,4" 
                            Click="OpenProfile"/>

                </StackPanel>

                <!-- Spacer -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <Button Content="Log Out"
                            Background="White"
                            Foreground="{StaticResource NavyBrush}"
                            FontWeight="SemiBold"
                            Padding="10,6"
                            BorderBrush="Transparent"
/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">
                <!-- Header -->
                <TextBlock Text="Fleet Management" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>
                <!-- Tongkang Big Card -->
                <!-- ===== BIG CARDS SECTION ===== -->
                <StackPanel Orientation="Horizontal"
                             Margin="0,0,0,30">

                    <!-- === CARD TONGKANG === -->
                    <Border Width="354"
                            Height="194"
                            Background="#D6E4F0"
                            CornerRadius="20"
                            BorderThickness="1"
                            Padding="20"
                            Margin="0,0,30,0"
                            Effect="{StaticResource Shadow}">
                        
                        <!-- SPACING -->
                        <Grid>
                            <TextBlock Text="Tongkang"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            <Button Content="See More"
                                    Width="90"
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Background="White"
                                    Foreground="{StaticResource NavyBrush}"
                                    BorderBrush="Transparent"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>
                        </Grid>
                    </Border>
                    <!-- === CARD TUGBOAT === -->
                    <Border Width="354"
                            Height="194"
                            Background="#D6E4F0"
                            BorderBrush="#4EA3FF"
                            CornerRadius="20"
                            Padding="20"
                            Effect="{StaticResource Shadow}">
                        <Grid>
                            <TextBlock Text="Tugboat"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>

                            <Button Content="See More"
                                    Width="90"
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Background="White"
                                    Foreground="{StaticResource NavyBrush}"
                                    BorderBrush="Transparent"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Section Title -->
                <TextBlock Text="Data Terkini"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>

                <!-- Data Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,30">

                    <!-- TONGKANG -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="20"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="TongkangCountText"
                       Text="0"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="{StaticResource NavyBrush}"
                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tongkang Aktif" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- TUGBOAT -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="20"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="TugboatCountText"
                                           Text="0"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource NavyBrush}"
                                           HorizontalAlignment="Center"/>
                            <TextBlock Text="Tugboat Aktif" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
