<Page x:Class="Eaship.page.Admin.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Profile">

        <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel VerticalAlignment="Stretch" Margin="24,40">
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Image Source="/Assets/logo2.png" Width="92" Height="49" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.678"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                </StackPanel>

                <!-- Menu Items -->
                <StackPanel>
                    <Button Style="{StaticResource NavButton}" 
                            Content="Fleet Management" 
                            Margin="0,4" 
                            Click="OpenFleetManagement"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Company Verification" 
                            Margin="0,4" 
                            Click="OpenCompanyVerification"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Booking Request" 
                            Margin="0,4" 
                            Click="OpenBookingRequest"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Contract Payment" 
                            Margin="0,4" 
                            Click="OpenContractPayment"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Profile" 
                            Margin="0,4" 
                            Click="OpenProfile"/>

                </StackPanel>

                <!-- Spacer -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <Button Content="Log Out"
                            Background="White"
                            Foreground="{StaticResource NavyBrush}"
                            FontWeight="SemiBold"
                            Padding="10,6"
                            BorderBrush="Transparent"
/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">

                <!-- TITLE -->
                <TextBlock Text="Profile Account"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{StaticResource NavyBrush}"
                   Margin="0,0,0,20"/>

                <TextBlock Text="Admin Information"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Margin="0,0,0,30"/>

                <!-- WHITE CARD -->
                <Border Background="White"
                Padding="40"
                CornerRadius="20"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                Effect="{DynamicResource Shadow}"
                Width="820" Height="217">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- NAME -->
                        <TextBlock Text="Name" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Grid.Row="0" Grid.Column="0"/>

                        <TextBox x:Name="NameBox"
                         Height="38"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0 0 0 20"
                         Background="#F8FBFF"
                         BorderBrush="#D6E4F0"/>

                        <!-- EMAIL -->
                        <TextBlock Text="Email" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Grid.Row="1" Grid.Column="0"/>

                        <TextBox x:Name="EmailBox"
                         Height="38"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0 0 0 20"
                         IsReadOnly="True"
                         Background="#F0F4FA"
                         BorderBrush="#D6E4F0"/>

                        <!-- PHONE -->
                        <TextBlock Text="Phone" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Grid.Row="2" Grid.Column="0"/>

                        <TextBox x:Name="PhoneBox"
                         Height="38"
                         Grid.Row="2" Grid.Column="1"
                         Margin="0 0 0 20"
                         Background="#F8FBFF"
                         BorderBrush="#D6E4F0"/>

                    </Grid>
                </Border>

                <!-- BUTTON BACK -->
                <Button Content="Back"
                Width="150"
                Height="40"
                Margin="0 30 0 0"
                HorizontalAlignment="Right"
                Background="#E8F1FA"
                BorderBrush="#C6D9F0"
                Foreground="{StaticResource NavyBrush}"
                FontWeight="SemiBold"
                Click="Back_Click"/>

            </StackPanel>
        </ScrollViewer>





    </Grid>
</Page>
