<Page x:Class="Eaship.page.Admin.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Profile">

        <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">

                <!-- TITLE -->
                <TextBlock Text="Profile Account"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{StaticResource NavyBrush}"
                   Margin="0,0,0,20"/>

                <TextBlock Text="Admin Information"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Margin="0,0,0,30"/>

                <!-- WHITE CARD -->
                <Border Background="White"
                Padding="40"
                CornerRadius="20"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                Effect="{DynamicResource Shadow}"
                Width="820" Height="217">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- NAME -->
                        <TextBlock Text="Name" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Grid.Row="0" Grid.Column="0"/>

                        <TextBox x:Name="NameBox"
                         Height="38"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0 0 0 20"
                         Background="#F8FBFF"
                         BorderBrush="#D6E4F0"/>

                        <!-- EMAIL -->
                        <TextBlock Text="Email" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Grid.Row="1" Grid.Column="0"/>

                        <TextBox x:Name="EmailBox"
                         Height="38"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0 0 0 20"
                         IsReadOnly="True"
                         Background="#F0F4FA"
                         BorderBrush="#D6E4F0"/>

                        <!-- PHONE -->
                        <TextBlock Text="Phone" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Grid.Row="2" Grid.Column="0"/>

                        <TextBox x:Name="PhoneBox"
                         Height="38"
                         Grid.Row="2" Grid.Column="1"
                         Margin="0 0 0 20"
                         Background="#F8FBFF"
                         BorderBrush="#D6E4F0"/>

                    </Grid>
                </Border>

                <!-- BUTTON BACK -->
                <Button Content="Back"
                    Style="{StaticResource LogoutButton}"
                    Width="150"
                    Height="40"
                    Margin="0 30 0 0"
                    HorizontalAlignment="Right"
                    Background="#E8F1FA"
                    Click="Back_Click"/>

            </StackPanel>
        </ScrollViewer>





    </Grid>
</Page>
