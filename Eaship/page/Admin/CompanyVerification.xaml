<Page x:Class="Eaship.page.Admin.CompanyVerification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="companyverification ">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>
        
        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">
                <!-- Header -->
                <TextBlock Text="Company Verification" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- ============ PENDING COMPANIES LIST ============ -->
                <ItemsControl x:Name="PendingList" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border 
                            Width="850"
                            Height="125"
                            Background="White"
                            BorderBrush="#D6E4F0"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,20">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- LEFT -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock Text="{Binding Nama}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#000"/>

                                        <TextBlock Text="{Binding Address}"
                                                   FontSize="14"
                                                   Foreground="#5A6474"/>

                                        <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}"
                                                   FontSize="12"
                                                   Foreground="Gray"/>
                                    </StackPanel>

                                    <!-- BUTTON -->
                                    <Button Grid.Column="1"
                                            Content="See More"
                                            Width="110"
                                            Height="34"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="White"
                                            BorderBrush="#D6E4F0"
                                            BorderThickness="1"
                                            Padding="6,2"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#123456"
                                            Cursor="Hand"
                                            Effect="{StaticResource Shadow}"
                                            Tag="{Binding RenterCompanyId}"
                                            Click="OpenPendingDetail_Click"/>
                                </Grid>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>






                <!-- Section Title -->
                <TextBlock Text="Companies"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>

                <!-- Data Cards -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <!-- Card 10 -->
                        <ColumnDefinition Width="30"/>
                        <!-- Spacer jarak -->
                        <ColumnDefinition Width="*"/>
                        <!-- Companies card -->
                    </Grid.ColumnDefinitions>

                    <!-- Card 10 -->
                    <Border Grid.Column="0"
                            Background="White"
                            CornerRadius="12"
                            Padding="16"
                            Effect="{DynamicResource Shadow}" Margin="64,57,64,57">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="txtCompanyVerified"
                                           Text="0"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource NavyBrush}"
                                           HorizontalAlignment="Center"/>

                            <TextBlock Text="Perusahaan Terdaftar" 
                       FontSize="14"
                       Foreground="Gray"
                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>


                    <!-- Companies Big Card -->
                    <Border Grid.Column="2"
                            Width="458"
                            Height="228"
                            Background="#D6E4F0"
                            BorderBrush="White"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="20">       

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Companies"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#123456"/>

                            <Button
                                    Content="See More"
                                    Click="SeeMore_Click"
                                    Height="34"
                                    VerticalAlignment="Bottom"
                                    Background="White"
                                    BorderBrush="#D6E4F0"
                                    BorderThickness="1"
                                    Padding="6,2"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="#123456"
                                    Cursor="Hand"
                                    Effect="{StaticResource Shadow}" Margin="302,0,0,0" Grid.Row="1"/>

                        </Grid>
                    </Border>

                </Grid>



            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

