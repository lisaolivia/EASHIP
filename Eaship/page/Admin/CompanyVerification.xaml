<Page x:Class="Eaship.page.Admin.CompanyVerification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="companyverification ">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel VerticalAlignment="Stretch" Margin="24,40">
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Image Source="/Assets/logo2.png" Width="92" Height="49" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.678"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                </StackPanel>

                <!-- Menu Items -->
                <StackPanel>
                    <Button Style="{StaticResource NavButton}" 
                            Content="Fleet Management" 
                            Margin="0,4" 
                            Click="OpenFleetManagement"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Company Verification" 
                            Margin="0,4" 
                            Click="OpenCompanyVerification"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Booking Request" 
                            Margin="0,4" 
                            Click="OpenBookingRequest"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Contract Payment" 
                            Margin="0,4" 
                            Click="OpenContractPayment"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Profile" 
                            Margin="0,4" 
                            Click="OpenProfile"/>

                </StackPanel>

                <!-- Spacer -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <Button Content="Log Out"
                            Background="White"
                            Foreground="{StaticResource NavyBrush}"
                            FontWeight="SemiBold"
                            Padding="10,6"
                            BorderBrush="Transparent"
/>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">
                <!-- Header -->
                <TextBlock Text="Company Verification" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <Border 
                    Width="850"
                    Height="125"
                    Background="White"
                    BorderBrush="#D6E4F0"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,0,20">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT CONTENT -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" >

                            <TextBlock Text="P. DTETI"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#000"/>

                            <TextBlock Text="Jalan 20 Oktober komplek golf permai"
                       FontSize="14"
                       Foreground="#5A6474"/>

                            <TextBlock Text="05/11/2025 14:27:44"
                       FontSize="12"
                       Foreground="Gray"/>
                        </StackPanel>

                        <!-- BUTTON -->
                        <Button Grid.Column="1"
                            Content="See More"
                            Width="110"
                            Height="34"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="White"
                            BorderBrush="#D6E4F0"
                            BorderThickness="1"
                            Padding="6,2"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#123456"
                            Cursor="Hand"
                            Effect="{StaticResource Shadow}"/>

                    </Grid>
                </Border>





                <!-- Section Title -->
                <TextBlock Text="Companies"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>

                <!-- Data Cards -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <!-- Card 10 -->
                        <ColumnDefinition Width="30"/>
                        <!-- Spacer jarak -->
                        <ColumnDefinition Width="*"/>
                        <!-- Companies card -->
                    </Grid.ColumnDefinitions>

                    <!-- Card 10 -->
                    <Border Grid.Column="0"
                            Background="White"
                            CornerRadius="12"
                            Padding="16"
                            Effect="{DynamicResource Shadow}" Margin="64,57,64,57">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="txtCompanyVerified"
                                           Text="0"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource NavyBrush}"
                                           HorizontalAlignment="Center"/>

                            <TextBlock Text="Perusahaan Terdaftar" 
                       FontSize="14"
                       Foreground="Gray"
                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>


                    <!-- Companies Big Card -->
                    <Border Grid.Column="2"
                            Width="458"
                            Height="228"
                            Background="#D6E4F0"
                            BorderBrush="White"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="20">       

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Companies"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#123456"/>

                            <Button
                                    Content="See More"
                                    Click="SeeMore_Click"
                                    Height="34"
                                    VerticalAlignment="Bottom"
                                    Background="White"
                                    BorderBrush="#D6E4F0"
                                    BorderThickness="1"
                                    Padding="6,2"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="#123456"
                                    Cursor="Hand"
                                    Effect="{StaticResource Shadow}" Margin="302,0,0,0" Grid.Row="1"/>

                        </Grid>
                    </Border>

                </Grid>



            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

