<Page x:Class="Eaship.page.Admin.CompanyVerificationDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="CompanyVerificationDetail">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- Header -->
                <TextBlock Text="Detail Company"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Company Information"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- COMPANY INFO CARD -->
                <Border Width="816"
                        Height="299"
                        Background="White"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        CornerRadius="25"
                        Padding="25"
                        Margin="0,0,0,30"
                        Effect="{StaticResource Shadow}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="67*"/>
                            <ColumnDefinition Width="240*"/>
                        </Grid.ColumnDefinitions>

                        <!-- NAMA PERUSAHAAN -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nama Perusahaan"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="CompanyNameBox"
                                 Grid.Row="0" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>

                        <!-- NPWP -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="NPWP"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="NPWPBox"
                                 Grid.Row="1" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>

                        <!-- ALAMAT -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Alamat"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="AddressBox"
                                 Grid.Row="2" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>

                        <!-- KOTA/PROVINSI -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Kota/Provinsi"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="CityProvinceBox"
                                 Grid.Row="3" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>

                        <!-- EMAIL BILLING -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Email Billing"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="EmailBillingBox"
                                 Grid.Row="4" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>

                        <!-- TELEPON -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Telepon"/>
                        <TextBox x:Name="PhoneBox"
                                 Grid.Row="5" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Grid.ColumnSpan="2"/>
                    </Grid>
                </Border>

                <!-- PIC SECTION -->
                <TextBlock Text="PIC Information"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <Border Width="816"
                        Height="195"
                        Background="White"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        CornerRadius="25"
                        Padding="25"
                        Margin="0,0,0,30"
                        Effect="{StaticResource Shadow}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="67*"/>
                            <ColumnDefinition Width="240*"/>
                        </Grid.ColumnDefinitions>

                        <!-- PIC NAME -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nama PIC"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="PICNameBox"
                                 Grid.Row="0" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>

                        <!-- PIC POSITION -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Jabatan"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="PICPositionBox"
                                 Grid.Row="1" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>

                        <!-- PIC EMAIL -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Email PIC"
                                   Margin="0,7,15,0"/>
                        <TextBox x:Name="PICEmailBox"
                                 Grid.Row="2" Grid.Column="1"
                                 Height="30" Background="#F7F7F7"
                                 Margin="0,0,0,15" Grid.ColumnSpan="2"/>
                    </Grid>
                </Border>

                <Button Content="Go To Verification"
                        Width="200"
                        Height="45"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,20"
                        Background="#DCE9F9"
                        Foreground="#3355AA"
                        FontWeight="SemiBold"
                        Click="GoToVerification_Click"/>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
