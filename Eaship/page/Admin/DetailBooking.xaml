<Page x:Class="Eaship.page.Admin.DetailBooking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="DetailBooking">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">

                <!-- Header -->
                <TextBlock Text="Detail Booking" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- DETAIL CARD -->
                <Border Background="White"
                        Padding="25"
                        CornerRadius="20"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        Margin="0 0 0 40"
                        Effect="{DynamicResource Shadow}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>


                        <!-- ORIGIN -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0 0 20 20">
                            <TextBlock Text="Origin" FontSize="13"/>
                            <TextBox x:Name="OriginBox"
                                 Height="38"
                                 Background="#F8FBFF"
                                 BorderBrush="#D6E4F0"
                                 IsReadOnly="True"/>
                        </StackPanel>

                        <!-- DESTINATION -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20 0 0 20">
                            <TextBlock Text="Destination" FontSize="13"/>
                            <TextBox x:Name="DestinationBox"
                                         Height="38"
                                         Background="#F8FBFF"
                                         BorderBrush="#D6E4F0"
                                         IsReadOnly="True"/>
                        </StackPanel>


                        <!-- START -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 0 20 20">
                            <TextBlock Text="Start" FontSize="13"/>
                            <TextBox x:Name="StartBox"
                                     Height="38"
                                     Background="#F8FBFF"
                                     BorderBrush="#D6E4F0"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <!-- DURATION -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20 0 0 20">
                            <TextBlock Text="Duration" FontSize="13"/>
                            <TextBox x:Name="DurationBox"
                                     Height="38"
                                     Background="#F8FBFF"
                                     BorderBrush="#D6E4F0"
                                     IsReadOnly="True"/>
                        </StackPanel>


                        <!-- CARGO -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0 0 20 0">
                            <TextBlock Text="Cargo" FontSize="13"/>
                            <TextBox x:Name="CargoBox"
                                     Height="38"
                                     Background="#F8FBFF"
                                     BorderBrush="#D6E4F0"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <!-- STATUS -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="20 0 0 0">
                            <TextBlock Text="Status" FontSize="13"/>
                            <TextBox x:Name="StatusBox"
                                     Height="38"
                                     Background="#F8FBFF"
                                     BorderBrush="#D6E4F0"
                                     IsReadOnly="True"/>
                        </StackPanel>

                    </Grid>
                </Border>



                <!-- ASSIGN TONGKANG -->
                <TextBlock Text="Assign Barge"
                           FontSize="26"
                           FontWeight="Bold"
                           Margin="0 0 0 20"/>

                <Border Background="White"
                        Padding="25"
                        CornerRadius="20"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        Margin="0 0 0 30">

                    <StackPanel>

                        <!-- TONGKANG -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Barge" FontSize="13"/>
                            <ComboBox x:Name="TongkangBox"
                                                             Height="38"/>
                        </StackPanel>


                        <!-- TUGBOAT -->
                        <StackPanel Margin="0">
                            <TextBlock Text="Tugboat" FontSize="13"/>
                            <ComboBox x:Name="TugboatBox"
                      Height="38"/>
                        </StackPanel>

                    </StackPanel>

                </Border>



                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                    <Button x:Name="DeclineButton"
                            Content="Decline"
                            Style="{StaticResource LogoutButton}"
                            Width="140"
                            Height="40"
                            Background="#D9534F"
                            Foreground="White"
                            Margin="0 0 20 0"
                            Click="Decline_Click"/>

                    <Button x:Name="ConfirmButton"
                            Content="Confirm"
                            Style="{StaticResource LogoutButton}"
                            Width="140"
                            Height="40"
                            Background="#E8F1FA"
                            Foreground="#3355AA"
                            Click="Confirm_Click"/>

                </StackPanel>

            </StackPanel>

        </ScrollViewer>
    </Grid>

</Page>
