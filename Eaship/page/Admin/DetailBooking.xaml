<Page x:Class="Eaship.page.Admin.DetailBooking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="DetailBooking">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">

                <!-- Header -->
                <TextBlock Text="Detail Booking" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- DETAIL CARD -->
                <Border Background="White"
                        Padding="25"
                        CornerRadius="20"
                        Width="849"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        Margin="0 0 0 40"
                        Effect="{DynamicResource Shadow}" Height="208">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!-- ORIGIN -->
                        <TextBlock Text="Origin" FontSize="13"/>
                        <TextBox x:Name="OriginBox"
                                 Grid.Row="0"
                                 Margin="0 22 40 20"
                                 Height="35"
                                 Background="#F8FBFF"
                                 BorderBrush="#D6E4F0"
                                 IsReadOnly="True"/>

                        <!-- DEST -->
                        <TextBlock Text="Destination" Grid.Column="1" FontSize="13"/>
                        <TextBox x:Name="DestinationBox"
                                 Grid.Row="0"
                                 Grid.Column="1"
                                 Margin="0 22 0 20"
                                 Height="35"
                                 Background="#F8FBFF"
                                 BorderBrush="#D6E4F0"
                                 IsReadOnly="True"/>


                        <!-- START -->
                        <TextBlock Text="Start" Grid.Row="1" FontSize="13"/>
                        <TextBox x:Name="StartBox"
                                 Grid.Row="1"
                                 Margin="0 22 40 20"
                                 Height="35"
                                 Background="#F8FBFF"
                                 BorderBrush="#D6E4F0"
                                 IsReadOnly="True"/>

                        <!-- DURATION -->
                        <TextBlock Text="Duration" Grid.Row="1" Grid.Column="1" FontSize="13"/>
                        <TextBox x:Name="DurationBox"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="0 22 0 20"
                                 Height="35"
                                 Background="#F8FBFF"
                                 BorderBrush="#D6E4F0"
                                 IsReadOnly="True"/>

                        <!-- CARGO -->
                        <TextBlock Text="Cargo" Grid.Row="2" FontSize="13"/>
                        <TextBox x:Name="CargoBox"
                                 Grid.Row="2"
                                 Margin="0 22 40 20"
                                 Height="35"
                                 Background="#F8FBFF"
                                 BorderBrush="#D6E4F0"
                                 IsReadOnly="True"/>

                        <!-- STATUS -->
                        <TextBlock Text="Status" Grid.Row="2" Grid.Column="1" FontSize="13"/>
                        <TextBox x:Name="StatusBox"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Margin="0 22 0 20"
                                 Height="35"
                                 Background="#F8FBFF"
                                 BorderBrush="#D6E4F0"
                                 IsReadOnly="True"/>
                    </Grid>
                </Border>

                <!-- ASSIGN TONGKANG -->
                <TextBlock Text="Assign Tongkang"
                           FontSize="26"
                           FontWeight="Bold"
                           Margin="0 0 0 20"/>

                <Border Background="White"
                        Padding="25"
                        CornerRadius="20"
                        Width="841"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        Margin="0 0 0 30" Height="192">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Tongkang" FontSize="13"/>
                        <ComboBox x:Name="TongkangBox"
                                  Grid.Row="0"
                                  Margin="0 20 0 10"
                                  Height="35"/>

                        <TextBlock Text="Days Allocated" Grid.Row="1" FontSize="13"/>
                        <TextBox x:Name="DaysBox"
                                 Grid.Row="1"
                                 Margin="0 20 0 10"
                                 Height="35"/>

                        <TextBlock Text="Tugboat" Grid.Row="2" FontSize="13"/>
                        <ComboBox x:Name="TugboatBox"
                                  Grid.Row="2"
                                  Margin="0 20 0 10"
                                  Height="35"/>
                    </Grid>
                </Border>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                    <Button Content="Decline"
                            Width="140"
                            Height="40"
                            Background="#D9534F"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0 0 20 0"
                            Click="Decline_Click"/>

                    <Button Content="Confirm"
                            Width="140"
                            Height="40"
                            Background="#E8F1FA"
                            BorderBrush="#C6D9F0"
                            Foreground="#3355AA"
                            FontWeight="SemiBold"
                            Click="Confirm_Click"/>
                </StackPanel>

            </StackPanel>

        </ScrollViewer>
    </Grid>

</Page>
