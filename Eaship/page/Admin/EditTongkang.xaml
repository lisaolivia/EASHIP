<Page x:Class="Eaship.page.Admin.EditTongkang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="EditTongkang">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- =============== SIDEBAR =============== -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel Margin="24,40">

                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Image Source="/Assets/logo2.png" Width="92" Height="49"/>
                </StackPanel>

                <StackPanel>
                    <Button Style="{StaticResource NavButton}" Content="Fleet Management" Click="OpenFleetManagement"/>
                    <Button Style="{StaticResource NavButton}" Content="Company Verification" Click="OpenCompanyVerification"/>
                    <Button Style="{StaticResource NavButton}" Content="Booking Request" Click="OpenBookingRequest"/>
                    <Button Style="{StaticResource NavButton}" Content="Contract Payment" Click="OpenContractPayment"/>
                    <Button Style="{StaticResource NavButton}" Content="Profile" Click="OpenProfile"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <Button Content="Log Out"
                            Background="White"
                            Foreground="{StaticResource NavyBrush}"
                            Padding="10,6"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- =============== MAIN CONTENT =============== -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="40">

                <TextBlock Text="Tongkang"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- FORM CARD -->
                <Border Background="White"
                        Padding="30"
                        CornerRadius="15"
                        BorderBrush="#E0E6EE"
                        BorderThickness="1"
                        Effect="{DynamicResource Shadow}">

                    <StackPanel Width="700" HorizontalAlignment="Left">

                        <!-- Nama -->
                        <TextBlock Text="Nama Tongkang" Margin="0,0,0,5"/>
                        <TextBox x:Name="NameBox" Height="35" Margin="0,0,0,15"
                                 Background="#FAFCFF" BorderBrush="#D6E4F0"/>

                        <!-- Kapasitas -->
                        <TextBlock Text="Kapasitas DWT" Margin="0,0,0,5"/>
                        <TextBox x:Name="DwtBox" Height="35" Margin="0,0,0,15"
                                 Background="#FAFCFF" BorderBrush="#D6E4F0"/>

                        <!-- Status -->
                        <TextBlock Text="Status" Margin="0,0,0,5"/>
                        <ComboBox x:Name="StatusBox"
                                  Height="35"
                                  Margin="0,0,0,15"
                                  Background="#FAFCFF"
                                  BorderBrush="#D6E4F0"/>

                        <!-- Include Tugboat -->
                        <CheckBox x:Name="IncludeTugboatCheck"
                                  Content="Include Tugboat"
                                  FontSize="14"
                                  Margin="0,5,0,10"/>

                    </StackPanel>
                </Border>

                <!-- SAVE BUTTON -->
                <Button Content="Save"
                        Width="150"
                        Height="45"
                        HorizontalAlignment="Right"
                        Margin="0,25,0,0"
                        Background="#DCE9F9"
                        Foreground="#3355AA"
                        FontWeight="SemiBold"
                        Click="Save_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
