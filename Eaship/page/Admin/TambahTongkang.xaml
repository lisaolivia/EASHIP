<Page x:Class="Eaship.page.Admin.TambahTongkang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="TambahTongkang">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Status Badge -->
            <DataTemplate x:Key="StatusTemplate">
                <Border CornerRadius="12" Padding="6 2" Background="{Binding StatusColor}">
                    <TextBlock Text="{Binding Status}"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="12"/>
                </Border>
            </DataTemplate>

            <!-- Header Style -->
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="10 6"/>
                <Setter Property="Background" Value="#EAECEF"/>
                <Setter Property="Foreground" Value="#111827"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>

            <!-- Row Style -->
            <Style TargetType="DataGridRow">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="White"/>
            </Style>

        </ResourceDictionary>
    </Page.Resources>
    

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <ctrl:AdminNavbar Grid.Column="0"/>
        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="60,40,60,40">

                <!-- TITLE -->
                <TextBlock Text="Tambah Tongkang"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 40"/>

                <!-- FORM CONTAINER -->
                <Border Background="White"
                        CornerRadius="20"
                        Padding="40"
                        Width="600"
                        HorizontalAlignment="Center"
                        BorderBrush="#E5E5E5"
                        BorderThickness="1"
                        Effect="{DynamicResource Shadow}">

                    <StackPanel>

                        <!-- NAME -->
                        <TextBlock Text="Nama Tongkang" FontSize="14" Foreground="#555"/>
                        <TextBox x:Name="NameBox"
                                     Height="40"
                                     Margin="0 0 0 20"
                                     Style="{StaticResource PlaceholderTextBox}"
                                     Tag="Masukkan nama tongkang"/>


                        <!-- KAPASITAS -->
                        <TextBlock Text="Kapasitas DWT" FontSize="14" Foreground="#555"/>
                        <TextBox x:Name="KapasitasBox"
                                     Height="40"
                                     Margin="0 0 0 20"
                                     Style="{StaticResource PlaceholderTextBox}"
                                     Tag="Contoh: 3000 T"/>


                        <!-- STATUS -->
                        <TextBlock Text="Status" FontSize="14" Foreground="#555"/>
                        <ComboBox x:Name="StatusBox"
                                  Height="40"
                                  Margin="0 0 0 30"/>

                        <!-- ADD BUTTON -->
                        <Button Content="Tambah"
                                Height="45"
                                FontSize="16"
                                Background="{StaticResource NavyBrush}"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="Add_Click"/>

                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

    </Grid>

</Page>
