<Page x:Class="Eaship.page.Admin.ContractPayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eaship.page.Admin"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="ContractPayment">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- ================= MAIN CONTENT ================= -->
        <ItemsControl x:Name="ContractList" Grid.Column="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                    CornerRadius="8"
                    Padding="14"
                    Margin="0 0 0 12"
                    BorderBrush="#D6E4F0"
                    BorderThickness="1">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="140"/>
                            </Grid.ColumnDefinitions>

                            <!-- LEFT SIDE -->
                            <StackPanel>

                                <TextBlock Text="{Binding CompanyName}"
                                   FontSize="15"
                                   FontWeight="Bold"/>

                                <TextBlock Text="{Binding CompanyAddress}"
                                   Foreground="#666"
                                   FontSize="13"
                                   Margin="0 2 0 4"/>

                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                   Foreground="#999"
                                   FontSize="12"/>
                            </StackPanel>

                            <!-- RIGHT BUTTON -->
                            <Button Grid.Column="1"
                            Content="See More"
                            Width="110"
                            Height="36"
                            Background="#E7F1FA"
                            BorderBrush="#C6D9F0"
                            Foreground="#3355AA"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            Click="SeeMore_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>



    </Grid>
</Page>


