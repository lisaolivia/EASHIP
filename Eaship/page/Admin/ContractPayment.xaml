<Page x:Class="Eaship.page.Admin.ContractPayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eaship.page.Admin"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="ContractPayment">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ========================================= -->
            <!--          STATUS COLOR CONVERTER           -->
            <!-- ========================================= -->
            <local:ContractStatusToColorConverter x:Key="StatusColorConverter"/>

            <!-- STATUS BADGE STYLE -->
            <Style x:Key="StatusBadge" TargetType="Border">
                <Setter Property="Padding" Value="6 2"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Margin" Value="0 0 0 6"/>
            </Style>

            <!-- DROP SHADOW FOR CARD -->
            <DropShadowEffect x:Key="CardShadow"
                              Color="#202020"
                              BlurRadius="14"
                              ShadowDepth="2"
                              Opacity="0.15"/>

            <!-- "SEE MORE" BUTTON STYLE -->
            <Style x:Key="SeeMoreButton" TargetType="Button">
                <Setter Property="Background" Value="#E7F1FA"/>
                <Setter Property="BorderBrush" Value="#C6D9F0"/>
                <Setter Property="Foreground" Value="#3355AA"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Width" Value="110"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    Padding="8 4">

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="See More" Margin="0 0 6 0"/>
                                    <Path Data="M0,0 L4,4 L0,8"
                                          Stroke="#3355AA"
                                          StrokeThickness="2"
                                          RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="90"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </StackPanel>

                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Page.Resources>



    <!-- ===================================================== -->
    <!--                     MAIN LAYOUT                       -->
    <!-- ===================================================== -->
    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- CONTENT -->
        <ScrollViewer Grid.Column="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ContractList">
                <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                            CornerRadius="12"
                            Padding="18"
                            Margin="0 0 0 14"
                            BorderBrush="#D6E4F0"
                            BorderThickness="1"
                            SnapsToDevicePixels="True"
                            Effect="{StaticResource CardShadow}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <!-- LEFT SECTION -->
                            <StackPanel>

                                <!-- Company Name -->
                                <TextBlock Text="{Binding CompanyName}"
                                           FontSize="17"
                                           FontWeight="Bold"
                                           Foreground="#1C2A39"/>

                                <!-- Company Address -->
                                <TextBlock Text="{Binding CompanyAddress}"
                                           Foreground="#666"
                                           FontSize="13"
                                           Margin="0 3 0 8"/>

                                <!-- STATUS BADGE -->
                                <Border Style="{StaticResource StatusBadge}"
                                        Background="{Binding Status, Converter={StaticResource StatusColorConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Fill="#555"
                                                 Width="6" Height="6"
                                                 VerticalAlignment="Center"
                                                 Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding Status}"
                                                   Foreground="#333"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>

                                <!-- CREATED DATE -->
                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd MMM yyyy • HH:mm}'}"
                                           Foreground="#888"
                                           FontSize="12"/>
                            </StackPanel>

                            <!-- RIGHT BUTTON -->
                            <Button Grid.Column="1"
                                    Style="{StaticResource SeeMoreButton}"
                                    Click="SeeMore_Click"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"/>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>

    </Grid>

</Page>
