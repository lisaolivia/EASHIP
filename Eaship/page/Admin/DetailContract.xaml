<Page x:Class="Eaship.page.Admin.DetailContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="DetailContract">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel VerticalAlignment="Stretch" Margin="24,40">

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Image Source="/Assets/logo2.png" Width="92" Height="49"/>
                </StackPanel>

                <!-- Menu Items -->
                <StackPanel>
                    <Button Style="{StaticResource NavButton}" Content="Fleet Management" Margin="0,4" Click="OpenFleetManagement"/>
                    <Button Style="{StaticResource NavButton}" Content="Company Verification" Margin="0,4" Click="OpenCompanyVerification"/>
                    <Button Style="{StaticResource NavButton}" Content="Booking Request" Margin="0,4" Click="OpenBookingRequest"/>
                    <Button Style="{StaticResource NavButton}" Content="Contract Payment" Margin="0,4" Click="OpenContractPayment"/>
                    <Button Style="{StaticResource NavButton}" Content="Profile" Margin="0,4" Click="OpenProfile"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <Button Content="Log Out"
                            Background="White"
                            Foreground="{StaticResource NavyBrush}"
                            FontWeight="SemiBold"
                            Padding="10,6"
                            BorderBrush="Transparent"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">

                <!-- Header -->
                <TextBlock Text="Detail Contract"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- BIG PDF BOX -->
                <Border Background="#B7B7B7"
                        Width="799"
                        Height="597"
                        CornerRadius="8"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        Padding="10">

                    <!-- PDF VIEWER -->
                    <WebBrowser x:Name="PdfViewer" Margin="0,0,-1,-1"/>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
