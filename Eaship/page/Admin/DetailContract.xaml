<Page x:Class="Eaship.page.Admin.DetailContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="DetailContract">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>
        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">

                <!-- Header -->
                <TextBlock Text="Detail Contract"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- BIG PDF BOX -->
                <Border Background="#B7B7B7"
                        Width="799"
                        Height="597"
                        CornerRadius="8"
                        BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        Padding="10">

                    <!-- PDF VIEWER -->
                    <WebBrowser x:Name="PdfViewer" Margin="0,0,-1,-1"/>
                </Border>

                <Button Content="Mark as Completed"
                        Style="{StaticResource LogoutButton}"
                        Margin="0 20 0 0"
                        Background="{StaticResource NavyBrush}"
                        Foreground="White"
                        Width="160"
                        Height="40"
                        Click="CompleteContract_Click"/>


            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
