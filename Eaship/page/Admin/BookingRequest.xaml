<Page x:Class="Eaship.page.Admin.BookingRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Booking Request">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel VerticalAlignment="Stretch" Margin="24,40">
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Image Source="/Assets/logo2.png" Width="92" Height="49" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.678"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                </StackPanel>

                <!-- Menu Items -->
                <StackPanel>
                    <Button Style="{StaticResource NavButton}" 
                            Content="Fleet Management" 
                            Margin="0,4" 
                            Click="OpenFleetManagement"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Company Verification" 
                            Margin="0,4" 
                            Click="OpenCompanyVerification"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Booking Request" 
                            Margin="0,4" 
                            Click="OpenBookingRequest"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Contract Payment" 
                            Margin="0,4" 
                            Click="OpenContractPayment"/>

                    <Button Style="{StaticResource NavButton}" 
                            Content="Profile" 
                            Margin="0,4" 
                            Click="OpenProfile"/>

                </StackPanel>

                <!-- Spacer -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <Button Content="Log Out"
                            Background="White"
                            Foreground="{StaticResource NavyBrush}"
                            FontWeight="SemiBold"
                            Padding="10,6"
                            BorderBrush="Transparent"
/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">
                <!-- Header -->
                <TextBlock Text="Booking Request" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- Booking List Section -->
                <ItemsControl x:Name="BookingList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0 0 0 16"
                                    BorderBrush="#D6E4F0"
                                    BorderThickness="1">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="140" />
                                        <!-- space tombol -->
                                    </Grid.ColumnDefinitions>

                                    <!-- LEFT CONTENT -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">

                                        <!-- Route -->
                                        <TextBlock Text="{Binding Route}"
                                                   FontWeight="Bold"
                                                   FontSize="15"
                                                   Margin="0 0 0 6"/>

                                        <!-- Cargo -->
                                        <TextBlock Text="{Binding Cargo}"
                                                   Foreground="#555"
                                                   FontSize="13"
                                                   Margin="0 0 0 4"/>

                                        <!-- Date -->
                                        <TextBlock Text="{Binding DateRange}"
                                                   Foreground="#888"
                                                   FontSize="12"/>
                                    </StackPanel>

                                    <!-- RIGHT BUTTON -->
                                    <Button Grid.Column="1"
                                            Content="See More"
                                            Width="110"
                                            Height="36"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="#E7F1FA"
                                            BorderBrush="#C6D9F0"
                                            BorderThickness="1"
                                            Foreground="#3355AA"
                                            FontWeight="SemiBold"
                                            Cursor="Hand"
                                            Click="SeeMore_Click" />
                                </Grid>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
