<Page x:Class="Eaship.page.Admin.BookingRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Booking Request">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>


        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">

                <!-- Header -->
                <TextBlock Text="Booking Request"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0 0 0 20"/>

                <!-- Booking List -->
                <ItemsControl x:Name="BookingList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0 0 0 16"
                                    BorderBrush="#D6E4F0"
                                    BorderThickness="1">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="140" />
                                    </Grid.ColumnDefinitions>

                                    <!-- LEFT CONTENT -->
                                    <StackPanel Grid.Column="0">

                                        <TextBlock Text="{Binding Route}"
                                                   FontWeight="Bold"
                                                   FontSize="15"
                                                   Margin="0 0 0 6"/>

                                        <TextBlock Text="{Binding Cargo}"
                                                   Foreground="#555"
                                                   FontSize="13"
                                                   Margin="0 0 0 4"/>

                                        <TextBlock Text="{Binding DateRange}"
                                                   Foreground="#888"
                                                   FontSize="12"/>
                                    </StackPanel>

                                    <!-- SEE MORE BUTTON -->
                                    <Button Grid.Column="1"
                                            Content="See More"
                                            Width="110"
                                            Height="36"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="#E7F1FA"
                                            BorderBrush="#C6D9F0"
                                            BorderThickness="1"
                                            Foreground="#3355AA"
                                            FontWeight="SemiBold"
                                            Cursor="Hand"
                                            Click="SeeMore_Click"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
