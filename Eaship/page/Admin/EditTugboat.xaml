<Page x:Class="Eaship.page.Admin.EditTugboat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="EditTugboat">

    <Grid Background="#F5F7FB" d:DesignHeight="800" d:DesignWidth="1200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR ADMIN -->
        <Border Background="#1C3D5A" Grid.Column="0">
            <StackPanel Margin="24,40">

                <Image Source="/Assets/logo2.png" Width="92" Height="49" Margin="0,0,0,40"/>

                <Button Style="{StaticResource NavButton}" Content="Fleet Management" Click="OpenFleetManagement" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Company Verification" Click="OpenCompanyVerification" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Booking Request" Click="OpenBookingRequest" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Contract Payment" Click="OpenContractPayment" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Profile" Click="OpenProfile" Margin="0,5"/>

            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <TextBlock Text="Edit Tugboat"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1C3D5A"
                           Margin="0 0 0 20"/>

                <!-- 🔥 BORDER YANG BENAR (ganti StackPanel sebelumnya) -->
                <Border Background="White"
                        Padding="30"
                        CornerRadius="12"
                        BorderBrush="#DDE6F2"
                        BorderThickness="1">

                    <StackPanel>

                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Tugboat Name" FontWeight="Bold"/>
                            <TextBox x:Name="TxtName" Height="35" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Horse Power (HP)" FontWeight="Bold"/>
                            <TextBox x:Name="TxtHp" Height="35" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Status" FontWeight="Bold"/>
                            <ComboBox x:Name="ComboStatus" SelectedValuePath="Content" Height="35" Margin="0,5,0,0">
                                <ComboBoxItem Content="Available"/>
                                <ComboBoxItem Content="InUse"/>
                                <ComboBoxItem Content="Maintenance"/>
                                
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,20,0,0">

                            <Button Content="Cancel"
                                    Width="100"
                                    Margin="0,0,10,0"
                                    Click="BtnCancel_Click"/>

                            <Button Content="Save"
                                    Width="120"
                                    Background="#1C3D5A"
                                    Foreground="White"
                                    Click="BtnSave_Click"/>
                        </StackPanel>

                    </StackPanel>

                </Border>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
