<Page x:Class="Eaship.page.Admin.TongkangListAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
       d:DesignWidth="1200" d:DesignHeight="800"
      Title="TongkangListAdmin">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel Margin="24,40">

                <Image Source="/Assets/logo2.png" Width="92" Height="49" Margin="0,0,0,40"/>

                <Button Style="{StaticResource NavButton}" Content="Fleet Management" Click="OpenFleetManagement" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Company Verification" Click="OpenCompanyVerification" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Booking Request" Click="OpenBookingRequest" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Contract Payment" Click="OpenContractPayment" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Profile" Click="OpenProfile" Margin="0,5"/>

                <Button Content="Log Out"
                        Background="White"
                        Foreground="{StaticResource NavyBrush}"
                        Margin="0,40,0,0"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <!-- MAIN -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <TextBlock Text="Tongkang"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0 0 0 20"/>

                <!-- BUTTON TAMBAH -->
                <Button Content="Tambah Tongkang"
                        Width="180"
                        Height="40"
                        HorizontalAlignment="Right"
                        Background="#E8F1FA"
                        BorderBrush="#C6D9F0"
                        Foreground="#3355AA"
                        FontWeight="SemiBold"
                        Margin="0 0 0 20"
                        Click="AddTongkang"/>

                <!-- GRID TONGKANG -->
                <ItemsControl x:Name="TongkangList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="336" ItemHeight="341" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#D6E4F0"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Margin="10"
                                    Background="White"
                                    Padding="0"
                                    Width="336">

                                <StackPanel>
                                    <!-- IMAGE -->
                                    <Image Source="{Binding ImageUrl}"
                                           Height="200"
                                           Stretch="UniformToFill"
                                           Margin="0,0,0,10"/>

                                    <!-- NAME -->
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Margin="10,0,0,0"/>

                                    <!-- COMPANY (optional) -->
                                    <TextBlock Text="{Binding Company}"
                                               Foreground="#666"
                                               FontSize="12"
                                               Margin="10,0,0,0"/>

                                    <!-- CAPACITY -->
                                    <TextBlock Text="{Binding KapasitasDwt}"
                                               Foreground="#555"
                                               FontSize="12"
                                               Margin="10,0,0,10"/>

                                    <!-- EDIT BUTTON -->
                                    <Button Content="Edit"
                                            HorizontalAlignment="Right"
                                            Margin="0 0 10 10"
                                            Click="EditTongkang"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>