<Page x:Class="Eaship.page.Admin.TongkangListAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="TongkangListAdmin">

    <!-- RESOURCES -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Default Fallback Image -->
            <BitmapImage x:Key="DefaultTongkangImage"
                         UriSource="pack://application:,,,/Eaship;component/Assets/default_barge.jpg"/>
        </ResourceDictionary>
    </Page.Resources>


    <!-- ROOT GRID -->
    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- PAGE TITLE -->
                <TextBlock Text="Tongkang"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0 0 0 20"/>

                <!-- ADD BUTTON -->
                <Button Content="Tambah Tongkang"
                        Width="180"
                        Height="40"
                        HorizontalAlignment="Right"
                        Background="#E8F1FA"
                        BorderBrush="#C6D9F0"
                        Foreground="#3355AA"
                        FontWeight="SemiBold"
                        Margin="0 0 0 20"
                        Click="AddTongkang"/>

                <!-- ITEMS CONTROL GRID -->
                <ItemsControl x:Name="TongkangList">

                    <!-- LAYOUT WITH WRAPPANEL -->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- CARD TEMPLATE -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Border Background="White"
                                    CornerRadius="14"
                                    Padding="0"
                                    Margin="12"
                                    Width="340"
                                    MouseLeftButtonUp="OpenDetailTongkang">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.15"/>
                                </Border.Effect>

                                <StackPanel>

                                    <!-- IMAGE WITH FALLBACK -->
                                    <Image Height="180"
                                           Stretch="UniformToFill"
                                           Margin="0,0,0,10">
                                        <Image.Source>
                                            <Binding Path="ImageUrl"
                                                     FallbackValue="{StaticResource DefaultTongkangImage}"
                                                     TargetNullValue="{StaticResource DefaultTongkangImage}"/>
                                        </Image.Source>
                                    </Image>

                                    <!-- NAME -->
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               Foreground="#1A1A1A"
                                               Margin="16,0,0,2"/>

                                    <!-- CAPACITY -->
                                    <TextBlock Text="{Binding KapasitasDwt}"
                                               Foreground="#6B7280"
                                               FontSize="13"
                                               Margin="16,0,0,10"/>

                                </StackPanel>

                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
