<Page x:Class="Eaship.page.Admin.DashboardAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Admin Dashboard">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">
                <!-- Header -->
                <TextBlock Text="Dashboard" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- Welcome Banner -->
                <Border CornerRadius="12"
                        Height="180"
                        Margin="0,0,0,30"
                        Background="#E6F0FA"
                        Effect="{StaticResource Shadow}">

                    <Grid>

                        <!-- Background Wave -->
                        <Image Source="/Eaship;component/Assets/wave.png"
               Stretch="UniformToFill"
               Opacity="0.4"
               Panel.ZIndex="0"/>

                        <!-- Welcome Text -->
                        <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="30,0"
                            Panel.ZIndex="1">
                            <TextBlock Text="Welcome Admin"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="#111827"/>
                        </StackPanel>

                        <!-- Notifikasi Button -->
                        <Button Content="Notification"
                            Style="{StaticResource LogoutButton}"
                            Foreground="{StaticResource NavyBrush}"
                            Background="White"
                            Click="Button_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,20,20"
                            Panel.ZIndex="2"/>

                    </Grid>
                </Border>





                <!-- Section Title -->
                <TextBlock Text="Statistic"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>

                <!-- Data Cards -->
                <!-- Data Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,30">

                    <!-- Card 1 — Perusahaan Terdaftar -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="18"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">

                            <!-- Icon -->
                            <StackPanel HorizontalAlignment="Center">
                                <Grid Width="48" Height="48">
                                    <Ellipse Fill="#EEF6FF" />

                                    <!-- Ikon GANTI jadi TextBlock -->
                                    <TextBlock Text="🏢"
                                               FontSize="22"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </StackPanel>



                            <!-- Value -->
                            <TextBlock x:Name="txtCompanyVerified"
                                       Text="0"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource NavyBrush}"
                                       Margin="0,10,0,2"
                                       HorizontalAlignment="Center"/>

                            <!-- Label -->
                            <TextBlock Text="Companies Registered"
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>

                            <!-- Growth -->
                            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,6,0,0">
                                <TextBlock x:Name="txtCompanyGrowth"
                           
                           Foreground="#16A34A"
                           FontWeight="SemiBold"
                           FontSize="12"/>
                  <TextBlock 
                           FontSize="12"
                           Foreground="#9CA3AF"
                           Margin="4,0,0,0"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>


                    <!-- Card 2 — Tongkang Aktif -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="18"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">

                            <StackPanel HorizontalAlignment="Center">
                                <Grid Width="48" Height="48">
                                    <Ellipse Fill="#EEF6FF" />


                                    <TextBlock Text="🚢"
                                               FontSize="22"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>


                                </Grid>
                            </StackPanel>


                            <TextBlock x:Name="txtTongkangAktif"
                                       Text="0"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource NavyBrush}"
                                       Margin="0,10,0,2"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Text="Active Barge"
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,6,0,0">
                                <TextBlock x:Name="txtTongkangGrowth"
                                           
                                           Foreground="#16A34A"
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                                <TextBlock 
                                           FontSize="12"
                                           Foreground="#9CA3AF"
                                           Margin="4,0,0,0"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>


                    <!-- Card 3 — Tugboat Aktif -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="18"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">

                            <StackPanel HorizontalAlignment="Center">
                                <Grid Width="48" Height="48">
                                    <Ellipse Fill="#EEF6FF" />

                            
                                    <TextBlock Text="🚤"
                                               FontSize="22"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>

                                </Grid>
                            </StackPanel>



                            <TextBlock x:Name="txtTugboatAktif"
                                           Text="0"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource NavyBrush}"
                                           Margin="0,10,0,2"
                                           HorizontalAlignment="Center"/>

                            <TextBlock Text="Active Tugboat"
                               FontSize="14"
                               Foreground="Gray"
                               TextAlignment="Center"/>

                                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,6,0,0">
                                        <TextBlock x:Name="txtTugboatGrowth"
                                   Foreground="#DC2626"
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                                        <TextBlock 
                                   FontSize="12"
                                   Foreground="#9CA3AF"
                                   Margin="4,0,0,0"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>


                    <!-- Card 4 — Booking Pending -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="18"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">

                            <StackPanel HorizontalAlignment="Center">
                                <Grid Width="48" Height="48">
                                    <Ellipse Fill="#EEF6FF" />

                                    <!-- Ikon GANTI jadi TextBlock -->
                                    <TextBlock Text="📄"
                                               FontSize="22"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>

                                </Grid>
                            </StackPanel>



                            <TextBlock x:Name="txtBookingPending"
                       Text="0"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="{StaticResource NavyBrush}"
                       Margin="0,10,0,2"
                       HorizontalAlignment="Center"/>

                            <TextBlock Text="Booking Pending"
                       FontSize="14"
                       Foreground="Gray"
                       TextAlignment="Center"/>

                            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,6,0,0">
                                <TextBlock x:Name="txtBookingGrowth"
                           
                           Foreground="#DC2626"
                           FontWeight="SemiBold"
                           FontSize="12"/>
                                <TextBlock 
                           FontSize="12"
                           Foreground="#9CA3AF"
                           Margin="4,0,0,0"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                </UniformGrid>


                <TextBlock Text="Notification"
                           FontSize="15"
                           FontWeight="Medium"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>
                
                <!-- Notification Section -->
                <ItemsControl x:Name="NotificationList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Padding="16" Margin="0 0 0 10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Company}" Foreground="Gray" FontSize="13"/>
                                    <TextBlock Text="{Binding NPWP}" Foreground="Gray" FontSize="12"/>
                                    <TextBlock Text="{Binding Date}"
                               Foreground="DarkGray"
                               FontSize="11"
                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
