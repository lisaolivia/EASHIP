<Page x:Class="Eaship.page.Admin.DashboardAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Admin Dashboard">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- ================= MAIN CONTENT ================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,40">
                <!-- Header -->
                <TextBlock Text="Dashboard" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0,0,0,20"/>

                <!-- Welcome Banner -->
                <Border CornerRadius="12"
                        Height="180"
                        Margin="0,0,0,30"
                        Background="#E6F0FA"
                        Effect="{StaticResource Shadow}">

                    <Grid>

                        <!-- Background Wave -->
                        <Image Source="/Eaship;component/Assets/wave.png"
               Stretch="UniformToFill"
               Opacity="0.4"
               Panel.ZIndex="0"/>

                        <!-- Welcome Text -->
                        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="30,0"
                    Panel.ZIndex="1">
                            <TextBlock Text="Welcome Admin"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="#111827"/>
                        </StackPanel>

                        <!-- Notifikasi Button -->
                        <Button Content="Notifikasi"
                                Width="140"
                                Height="38"
                                Background="White"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Foreground="{StaticResource NavyBrush}"
                                Cursor="Hand"
                                Effect="{StaticResource Shadow}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,20,20"
                                Panel.ZIndex="2"/>
                    </Grid>
                </Border>





                <!-- Section Title -->
                <TextBlock Text="Data Terkini"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>

                <!-- Data Cards -->
                <UniformGrid Columns="4" Margin="0,0,0,30">
                    <!-- Card 1 -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="txtCompanyVerified"
                                           Text="0"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource NavyBrush}"
                                           HorizontalAlignment="Center"/>

                            <TextBlock Text="Perusahaan Terdaftar" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="10" 
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource NavyBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tongkang Aktif" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3 -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="10" 
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource NavyBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tugboat Aktif" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 4 -->
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="8"
                            Padding="16"
                            Effect="{DynamicResource Shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="10" 
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource NavyBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Booking Pending" 
                                       FontSize="14"
                                       Foreground="Gray"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <TextBlock Text="Notifikasi"
                           FontSize="15"
                           FontWeight="Medium"
                           Margin="0,30,0,16"
                           Foreground="{StaticResource NavyBrush}"/>
                
                <!-- Notification Section -->
                <ItemsControl x:Name="NotificationList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Padding="16" Margin="0 0 0 10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Company}" Foreground="Gray" FontSize="13"/>
                                    <TextBlock Text="{Binding NPWP}" Foreground="Gray" FontSize="12"/>
                                    <TextBlock Text="{Binding Date}"
                               Foreground="DarkGray"
                               FontSize="11"
                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
