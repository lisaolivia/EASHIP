<Page x:Class="Eaship.page.Admin.TambahTugboat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="TambahTugboat">

    <Grid Background="#F5F7FB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR ADMIN -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <TextBlock Text="Tambah Tugboat"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1C3D5A"
                           Margin="0 0 0 20"/>

                <Border Background="White"
                        Padding="30"
                        CornerRadius="12"
                        BorderBrush="#DDE6F2"
                        BorderThickness="1">

                    <StackPanel>

                        <!-- TUGBOAT NAME -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Tugboat Name" FontWeight="Bold"/>
                            <TextBox x:Name="TxtName" Height="35" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- HP -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Horse Power (HP)" FontWeight="Bold"/>
                            <TextBox x:Name="TxtHp" Height="35" Margin="0,5,0,0"/>
                        </StackPanel>


                        <!-- FOTO -->
                        <TextBlock Text="Foto Tugboat" FontSize="14" Foreground="#555"/>

                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">

                            <Button Content="Upload Foto"
                                    Margin="0 5 0 0"
                                    Width="94"
                                    Height="33"
                                    Background="{StaticResource NavyBrush}"
                                    Foreground="White"
                                    Click="UploadFoto_Click"/>

                            <Image x:Name="PreviewFoto"
                                       Width="120"
                                       Height="80"
                                       Margin="20 0 0 0"
                                       Stretch="UniformToFill"
                                       Visibility="Collapsed"/>
                        </StackPanel>


                        <!-- STATUS -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Status" FontWeight="Bold"/>
                            <ComboBox x:Name="ComboStatus" Height="35" Margin="0,5,0,0">
                                <ComboBoxItem Content="AVAILABLE"/>
                                <ComboBoxItem Content="ASSIGNED"/>
                                <ComboBoxItem Content="MAINTENANCE"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- BUTTONS -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,20,0,0">

                            <Button Content="Cancel"
                                    Width="100"
                                    Margin="0,0,10,0"
                                    Click="BtnCancel_Click"/>

                            <Button Content="Save"
                                    Width="120"
                                    Background="#1C3D5A"
                                    Foreground="White"
                                    Click="BtnSave_Click"/>
                        </StackPanel>

                    </StackPanel>

                </Border>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
