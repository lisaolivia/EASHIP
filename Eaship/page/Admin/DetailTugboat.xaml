<Page x:Class="Eaship.page.Admin.DetailTugboat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ctrl="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="DetailTugboat">

    <Page.Resources>
        <BitmapImage x:Key="DefaultTugboatImage"
                     UriSource="pack://application:,,,/Eaship;component/Assets/tugboat_default.jpeg"/>
    </Page.Resources>

    <Grid Background="#F5F7FB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <ctrl:AdminNavbar Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="40">

                <TextBlock Text="Detail Tugboat"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0 0 0 20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT BOX -->
                    <Border Background="White"
                            Padding="20"
                            CornerRadius="12"
                            BorderBrush="#DDE6F2"
                            BorderThickness="1">

                        <StackPanel>

                            <!-- IMAGE -->
                            <Image Name="TugboatImage"
                                   Height="300"
                                   Stretch="UniformToFill"
                                   Margin="0,0,0,20"/>


                            <!-- NAME -->
                            <TextBlock x:Name="NameText"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 10"/>

                            <StackPanel Margin="0 20 0 0">

                                <TextBlock Text="Horse Power (HP):" FontWeight="Bold"/>
                                <TextBlock x:Name="HpText" Margin="0 0 0 10"/>

                                <TextBlock Text="Status:" FontWeight="Bold"/>
                                <TextBlock x:Name="StatusText" Margin="0 0 0 10"/>

                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- RIGHT BOX -->
                    <Border Grid.Column="1"
                            Background="White"
                            Padding="20"
                            CornerRadius="12"
                            BorderBrush="#DDE6F2"
                            BorderThickness="1"
                            Margin="40 0 0 0">

                        <StackPanel>
                            <TextBlock Text="Usage Status"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 10"/>

                            <TextBlock x:Name="TongkangInfo"
                                       Text="Loading..."
                                       TextWrapping="Wrap"
                                       FontSize="15"
                                       Foreground="#334155"/>
                        </StackPanel>

                    </Border>


                </Grid>

                <!-- BUTTON EDIT -->
                <Button Content="Edit"
                        Style="{StaticResource LogoutButton}"
                        Width="120"
                        Height="45"
                        HorizontalAlignment="Right"
                        Margin="0 40 0 0"
                        Background="#E8F1FA"
                        BorderBrush="#C6D9F0"    
                        Click="Edit_Click"/>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
