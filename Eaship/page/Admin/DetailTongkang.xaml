<Page x:Class="Eaship.page.Admin.DetailTongkang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eaship.page.Admin"
      mc:Ignorable="d" 
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="DetailTongkang">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Background="{StaticResource NavyBrush}" Grid.Column="0">
            <StackPanel Margin="24,40">

                <Image Source="/Assets/logo2.png" Width="92" Height="49" Margin="0,0,0,40"/>

                <Button Style="{StaticResource NavButton}" Content="Fleet Management" Click="OpenFleetManagement" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Company Verification" Click="OpenCompanyVerification" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Booking Request" Click="OpenBookingRequest" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Contract Payment" Click="OpenContractPayment" Margin="0,5"/>
                <Button Style="{StaticResource NavButton}" Content="Profile" Click="OpenProfile" Margin="0,5"/>

                <Button Content="Log Out"
                        Background="White"
                        Foreground="{StaticResource NavyBrush}"
                        Margin="0,40,0,0"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <!-- MAIN -->
        <!-- MAIN -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="40">

                <TextBlock Text="Tongkang"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource NavyBrush}"
                           Margin="0 0 0 20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT CONTENT -->
                    <Border Background="White" Padding="20" BorderBrush="#D6E4F0" BorderThickness="2" CornerRadius="12">

                        <StackPanel>

                            <!-- IMAGE -->
                            <Image x:Name="TongkangImage"
                                   Height="300"
                                   Stretch="UniformToFill"
                                   Margin="0 0 0 20"/>

                            <!-- NAME -->
                            <TextBlock x:Name="NameText"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 10"/>

                            <!-- REAL DETAILS -->
                            <StackPanel Margin="0 20 0 0">

                                <TextBlock Text="Kapasitas:" FontWeight="Bold"/>
                                <TextBlock x:Name="KapasitasText" Margin="0 0 0 10"/>

                                <TextBlock Text="Status:" FontWeight="Bold"/>
                                <TextBlock x:Name="StatusText" Margin="0 0 0 10"/>

                                <TextBlock Text="Include Tugboat:" FontWeight="Bold"/>
                                <TextBlock x:Name="IncludeTugboatText" Margin="0 0 0 10"/>

                                <TextBlock Text="Jumlah Tugboat Terhubung:" FontWeight="Bold"/>
                                <TextBlock x:Name="JumlahTugboatText" Margin="0 0 0 10"/>

                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- RIGHT CONTENT (COMPANY OR EMPTY) -->
                    <Border Grid.Column="1"
                            Background="White"
                            Padding="20"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="40 0 0 0">

                        <TextBlock x:Name="CompanyText"
                                   Text="Tidak ada perusahaan"
                                   FontSize="18"/>

                    </Border>

                </Grid>

                <!-- BUTTON EDIT -->
                <Button Content="Edit"
                        Width="120"
                        Height="45"
                        HorizontalAlignment="Right"
                        Margin="0 40 0 0"
                        Background="#E8F1FA"
                        BorderBrush="#C6D9F0"
                        Foreground="#3355AA"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Click="Edit_Click"/>

            </StackPanel>
        </ScrollViewer>


    </Grid>
</Page>