<Page x:Class="Eaship.page.RequireLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="EaShip - Login Required">

    <!-- THEME -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>


        <!-- ========== NAVBAR ========== -->
        <Border Background="#1E3A5F" Grid.Row="0">
            <Grid Margin="48,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand -->
                <Button Background="Transparent"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Cursor="Hand"
                          Click="Brand_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>

                    <Image Source="pack://application:,,,/Eaship;component/Assets/logo2.png"
              Width="86" Height="59" RenderTransformOrigin="0.5,0.775"/>
                </Button>

                <!-- Center Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="BtnBarges" Content="Barges" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnBarges_Click"/>
                    <Button x:Name="BtnBookings" Content="My Bookings" Foreground="White" Background="Transparent" 
                         BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnBookings_Click"/>
                    <Button x:Name="BtnContract" Content="Contract" Foreground="White" Background="Transparent" 
                            BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnContract_Click"/>
                    <Button x:Name="Btnnotifikasi" 
                              Style="{StaticResource NavButton}" 
                              Content="Notifikasi"         
                              Margin="6,0,0,0"          
                              Click="Buttonnotifikasi_Click"/>
                    <Button x:Name="BtnProfile" Content="Profile" Foreground="White" Background="Transparent" 
                                 BorderThickness="0" Padding="16,8" FontSize="14" Cursor="Hand" Click="BtnProfile_Click"/>
                </StackPanel>

                <!-- Right Menu -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnSignUpNav" Content="Sign Up" Foreground="navy" Background="White" 
                            BorderThickness="0" Padding="24,8" FontSize="14" Cursor="Hand" Click="BtnSignUpNav_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== CONTENT ========== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="56,36">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Let’s Start Sailing!"
                           Style="{StaticResource H1}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

            

                    <Image Source="pack://application:,,,/Assets/gambar2.png"
                           Width="404"
                           Height="214"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>

                    <TextBlock Text="You need to log in first to start booking your ships and barges."
                           FontSize="18"
                           Foreground="{StaticResource TextBrush}"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           Width="600"/>

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0">

                        <Button x:Name="BtnLoginNow"
                            Style="{StaticResource PrimaryButton}"
                            Content="Login →"
                            Width="160"
                            Height="49"
                            Click="Login_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- ========== FOOTER ========== -->
        <Border Grid.Row="2" Background="#D6E3F2" Margin="0,60,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved. Address Address"/>
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No. 01 | support@eaship.com" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
