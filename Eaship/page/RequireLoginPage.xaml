<Page x:Class="Eaship.page.RequireLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1280" d:DesignHeight="720"
      Title="EaShip - Login Required">

    <!-- THEME -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- ========== NAVBAR ========== -->
        <Border Background="{StaticResource NavyBrush}" Grid.Row="0">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- BRAND -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/logoputih.png" Width="86" Height="59"/>
                </StackPanel>

                <!-- MENU -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                    <Button x:Name="BtnBarges"
                            Style="{StaticResource NavButton}" 
                            Content="Barges"
                            Click="Button_Click"/>

                    <Button x:Name="BtnBookings"
                            Style="{StaticResource NavButton}" 
                            Content="My Bookings"  
                            Margin="6,0,0,0"
                            Click="Button_Click_1"/>

                    <Button x:Name="BtnInvoice"
                            Style="{StaticResource NavButton}" 
                            Content="Invoice"
                            Margin="6,0,0,0"/>

                    <Button x:Name="BtnHelp"
                            Style="{StaticResource NavButton}" 
                            Content="Help"
                            Margin="6,0,0,0"
                            Click="Button_Click_2"/>

                    <Button x:Name="BtnProfile"
                            Style="{StaticResource OutlineButton}" 
                            Content="Profile"
                            Margin="6,0,0,0"
                            Click="Button_Click_3"/>

                    <Button x:Name="BtnSignUpNav"
                            Style="{StaticResource OutlineButton}" 
                            Content="Sign Up"
                            Margin="6,0,0,0"
                            Click="SignUp_Click"/>

                    <Button x:Name="BtnLoginNav"
                            Background="Black" 
                            Foreground="White" 
                            Padding="12,6" 
                            Content="Log In"
                            Margin="6,0,0,0"
                            Click="Login_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== CONTENT ========== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="56,36">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Let’s Start Sailing!"
                           Style="{StaticResource H1}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                    <Image Source="/Eaship;component/Assets/gambar2.png"
                       Width="404"
                       Height="214"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>

                    <TextBlock Text="You need to log in first to start booking your ships and barges."
                           FontSize="18"
                           Foreground="{StaticResource TextBrush}"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           Width="600"/>

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0">

                        <Button x:Name="BtnLoginNow"
                            Style="{StaticResource PrimaryButton}"
                            Content="Login →"
                            Width="160"
                            Height="49"
                            Click="Login_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- ========== FOOTER ========== -->
        <Border Grid.Row="2" Background="#D6E3F2" Margin="0,60,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved. Address Address"/>
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No. 01 | support@eaship.com" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
