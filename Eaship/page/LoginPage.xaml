<Page x:Class="Eaship.page.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="LoginPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <!-- navbar -->
            <RowDefinition/>
            <!-- content -->
            <RowDefinition Height="80"/>
            <!-- footer -->
        </Grid.RowDefinitions>

        <!-- NAVBAR  -->
        <Border Grid.Row="0" Background="#123B61">
            <TextBlock Text="⛴ Eaship" Foreground="White" FontSize="18" FontWeight="Bold"
                 VerticalAlignment="Center" Margin="20,0,0,0"/>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="1">
            <StackPanel Width="420" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Log In" FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Email" Margin="0,0,0,6"/>
                <TextBox Height="34" BorderBrush="#9CA3AF" BorderThickness="1"
                 Background="#F5F6F8" Margin="0,0,0,12"/>

                <TextBlock Text="Password" Margin="0,0,0,6"/>
                <PasswordBox Height="34" BorderBrush="#9CA3AF" BorderThickness="1"
                     Background="#F5F6F8" Margin="0,0,0,16"/>

                <Button Content="Login" Height="38" Background="#123B61"
                Foreground="White" BorderThickness="0" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D9E8F4">
            <TextBlock Text="© Company" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Foreground="#4B5563" FontSize="12"/>
        </Border>
    </Grid>
</Page>
