<Page x:Class="Eaship.page.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="LoginPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <!-- ========== NAVBAR ========== -->
        <Border Background="#1E3A5F" Grid.Row="0">
            <Grid Margin="48,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand -->
                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Brand_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>

                    <Image Source="pack://application:,,,/Eaship;component/Assets/logo2.png"
                            Width="86" Height="59" RenderTransformOrigin="0.5,0.775"/>
                </Button>


                <!-- Right Menu -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnSignupNav" Content="SignUp" Foreground="White" Background="Transparent" 
                           BorderBrush="White" BorderThickness="1" Padding="20,8" FontSize="14" 
                           Cursor="Hand" Margin="0,0,12,0" Click="SignUp_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="56,36">
                <StackPanel Width="420" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Log In" FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,24"/>

                    <!-- FORM CONTAINER -->
                    <Border BorderBrush="#D1D5DB" 
                            BorderThickness="2"
                            Padding="24"
                            CornerRadius="8"
                            Background="White"
                            Margin="0,0,0,20">
                        <Grid>
                            <StackPanel Margin="12">
                                <!-- EMAIL ID -->
                                <TextBlock Text="Email Id" Margin="0,0,0,6" FontWeight="Normal"/>
                                <TextBox x:Name="txtEmail" 
                                             Height="40" 
                                             BorderBrush="#9CA3AF" 
                                             BorderThickness="1"
                                             Background="White" 
                                             Padding="12,0"
                                             FontSize="14"
                                             Margin="0,0,0,16"/>

                                <!-- PASSWORDS -->
                                <TextBlock Text="Passwords" Margin="0,0,0,6" FontWeight="Normal"/>
                                <PasswordBox x:Name="txtPassword" 
                                             Height="40" 
                                             BorderBrush="#9CA3AF" 
                                             BorderThickness="1"
                                             Background="White" 
                                             Padding="12,0"
                                             FontSize="14"
                                             Margin="0,0,0,12"/>

                            </StackPanel>
                        </Grid>
                    </Border>


                    <!-- LOGIN BUTTON -->
                    <Button x:Name="BtnLoginSubmit" 
                            Style="{StaticResource LogoutButton}"
                            Content="Login" 
                            Height="42" 
                            Background="#123B61"
                            Foreground="White" 
                            FontSize="16"
                            Click="Login_Click"
                            Margin="0,0,0,16"/>

                    <!-- DON'T HAVE ACCOUNT -->
                    <TextBlock Text="Don't have an account?" 
                               FontSize="14"
                               Foreground="#4B5563"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <!-- SIGN UP NOW BUTTON -->
                    <Button x:Name="BtnGoSignUp"
                            Content="Sign Up Now" 
                            Style="{StaticResource LogoutButton}"
                            Height="42"
                            Background="#E6F0FA"
                            Foreground="#123B61"

                            FontSize="16"
                            Click="GoRegister_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D6E3F2" Margin="0,60,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved. Address Address"/>
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No. 01 | support@eaship.com" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>