<Page x:Class="Eaship.page.Renter.Barges"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      Title="Barges">

    <!-- ========== RESOURCES HARUS DI SINI ========= -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- TEMPLATE KARTU TONGKANG -->
            <DataTemplate x:Key="TongkangCardTemplate">
                <Border BorderBrush="#D0D7DF" BorderThickness="1" CornerRadius="12"
            Padding="12" Margin="10" Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Gambar Tongkang -->
                        <Border CornerRadius="10" Grid.Column="0" Margin="0,0,12,0">
                            <Image Stretch="UniformToFill"
                                   Source="{Binding DisplayImageUrl}" />


                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}"
                           FontSize="20" FontWeight="Bold" />
                            <TextBlock Text="{Binding KapasitasDwt, StringFormat='Capacity: {0} DWT'}"
                           FontSize="14" Foreground="#546072" Margin="0,4,0,10"/>

                            <Button Content="View Details"
                                    Background="#163A63"
                                    Foreground="White"
                                    Padding="6"
                                    Width="120"
                                    HorizontalAlignment="Left"
                                    Tag="{Binding TongkangId}"
                                    Click="BtnTongkangDetail_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>


            <!-- TEMPLATE KARTU TUGBOAT -->
            <DataTemplate x:Key="TugboatCardTemplate">
                <Border BorderBrush="#D0D7DF" BorderThickness="1" CornerRadius="12"
                         Padding="12" Margin="10" Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Gambar Tugboat -->
                        <Border Width="220" Height="220"
                                    CornerRadius="12"
                                    BorderBrush="#D6E4F0"
                                    Background="White"
                                    BorderThickness="1">
                            <Image Name="TugboatImage"
                                    Source="{Binding DisplayImageUrl}"

                                       Stretch="UniformToFill"
                                       ClipToBounds="True"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" Margin="5" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Nama}"
                           FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="{Binding HP, StringFormat='HP: {0}'}"
                           FontSize="14" Foreground="#546072" Margin="0,4,0,10"/>

                            <Button Content="View Details"
                                    Background="#163A63"
                                    Foreground="White"
                                    Margin="3"
                                    Padding="6"
                                    Width="120"
                                    HorizontalAlignment="Left"
                                    Tag="{Binding TugboatId}"
                                    Click="BtnTugboatDetail_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>



        </ResourceDictionary>
    </Page.Resources>

    <!-- ========== MAIN GRID ========== -->
    <Grid d:DesignWidth="1200" d:DesignHeight="800" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- NAVBAR -->
        <controls:RenterNavbar Grid.Row="0"/>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="60,30,60,40">

                <!-- Header Banner -->
                <Border Height="260"
                        CornerRadius="15"
                        BorderBrush="#96B5D1"
                        BorderThickness="2">
                    <Border.Background>
                        <ImageBrush ImageSource="/Eaship;component/Assets/wave.png"
                                    Stretch="UniformToFill"/>
                    </Border.Background>

                    <StackPanel VerticalAlignment="Center" Margin="40,0">
                        <TextBlock Text="Search Barges &amp; Tugboats"
                                   FontSize="32" FontWeight="Bold" Foreground="#1C2A39"/>
                        <TextBlock Text="Find the perfect vessel for your shipping needs"
                                   FontSize="18" Foreground="#37465A"/>
                    </StackPanel>
                </Border>

                <!-- FILTER -->
                <Border Background="White"
                        CornerRadius="10"
                        Padding="25"
                        Margin="0,30,0,25"
                        BorderBrush="#D3DCE5"
                        BorderThickness="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="180"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Name -->
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Search Name" FontSize="14" FontWeight="Bold"/>
                            <TextBox x:Name="TxtSearchName" Height="35" Padding="8" Background="#F2F6FA"/>
                        </StackPanel>

                        <!-- Min Capacity -->
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="Min DWT (Tongkang)" FontSize="14" FontWeight="Bold"/>
                            <TextBox x:Name="TxtMinDwt" Height="35" Padding="8" Background="#F2F6FA"/>
                        </StackPanel>

                        <!-- Min HP -->
                        <StackPanel Grid.Column="2" Margin="0,0,20,0">
                            <TextBlock Text="Min HP (Tugboat)" FontSize="14" FontWeight="Bold"/>
                            <TextBox x:Name="TxtMinHp" Height="35" Padding="8" Background="#F2F6FA"/>
                        </StackPanel>

                        <!-- Search Button -->
                        <Button Grid.Column="3"
                                Content="Search"
                                Background="#163A63"
                                Foreground="White"
                                FontSize="16"
                                Margin="0,18,0,0"
                                Click="BtnSearch_Click"/>
                    </Grid>
                </Border>


                <!-- Barges -->
                    <TextBlock Text="Available Barges" FontSize="20" FontWeight="Bold"/>
                <ItemsControl x:Name="TongkangList"
              ItemTemplate="{StaticResource TongkangCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"
                       ItemWidth="350"
                       ItemHeight="180"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>


                <!-- Tugboats -->
                <TextBlock Text="Available Tugboats"
                           FontSize="20" FontWeight="Bold"
                           Margin="0,40,0,15"/>
                <ItemsControl x:Name="TugboatList"
                                 ItemTemplate="{StaticResource TugboatCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"
                                       ItemWidth="350"
                                       ItemHeight="180"/>   
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>


            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="© 2000 - Company, Inc. All rights reserved."
                           Foreground="{StaticResource MutedBrush}" FontSize="12"/>
                <TextBlock Text="+62812345 | Jl. Teti Sejati No.01 | support@eaship.com"
                           Foreground="{StaticResource MutedBrush}" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
