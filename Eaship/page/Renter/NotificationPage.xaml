<Page x:Class="Eaship.page.Renter.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="NotificationPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Badge Style -->
            <Style x:Key="BadgeStyle" TargetType="Border">
                <Setter Property="Padding" Value="6,2"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>

        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>



        <!-- =================== NAVBAR =================== -->
        <controls:RenterNavbar Grid.Row="0"/>



        <!-- =================== CONTENT =================== -->
        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="60,30">

                <TextBlock Text="Your Notifications"
                           FontSize="26"
                           FontWeight="Bold"
                           Margin="0,0,0,25"/>

                <ItemsControl x:Name="NotifList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#D6E4F0"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    Background="White">

                                <StackPanel>

                                    <!-- Type Badge -->
                                    <Border Background="{Binding BadgeColor}"
                                            Padding="6,3"
                                            CornerRadius="5"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Type}"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>

                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,10,0,5"/>

                                    <TextBlock Text="{Binding Description}"
                                               TextWrapping="Wrap"
                                               Foreground="#4A5568"
                                               FontSize="14"/>

                                    <TextBlock Text="{Binding TimeAgo}"
                                               FontSize="12"
                                               Foreground="#6B7280"
                                               Margin="0,10,0,0"/>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>



        <!-- =================== FOOTER =================== -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="© 2000 - Company, Inc. All rights reserved."
                           Foreground="{StaticResource MutedBrush}" FontSize="12"/>
                <TextBlock Text="+62812345 | Jl. Teti Sejati No.01 | support@eaship.com"
                           Foreground="{StaticResource MutedBrush}" FontSize="12" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

    </Grid>

</Page>
