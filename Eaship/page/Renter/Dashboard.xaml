<Page x:Class="Eaship.page.Renter.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="Dashboard">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#F8FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- NAVBAR -->
        <controls:RenterNavbar Grid.Row="0"/>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="60,40,60,40">

                <!-- ========== Section 1: Welcome (Default) ========== -->
                <Border x:Name="SectionWelcome"
                        Background="#DCE7F0" 
                        CornerRadius="16"
                        Padding="50,40"
                        Visibility="Visible"
                        Margin="0,0,0,40">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                          Opacity="0.08" 
                                          BlurRadius="15" 
                                          ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Welcome Aboard!" 
                                   FontSize="42"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,16"/>

                        <TextBlock FontSize="18"
                                   Foreground="#4A5568"
                                   TextWrapping="Wrap"
                                   LineHeight="28"
                                   Margin="0,0,0,40">
                            <Run Text="Create a new company profile or join an existing one to start booking barges"/>
                            <LineBreak/>
                            <Run Text="and ships."/>
                        </TextBlock>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button x:Name="BtnCreateCompany"
                                    Style="{StaticResource LogoutButton}"
                                    Content="Create Company"
                                    Width="200"
                                    Height="50"
                                    FontSize="16"
                                    Background="White"
                                    Foreground="#2C3E50"
                                    Cursor="Hand"
                                    Margin="0,0,16,0" 
                                    Click="BtnCreateCompany_Click"/>

                            <Button x:Name="BtnJoinExisting"
                                    Content="Join Existing"
                                    Style="{StaticResource LogoutButton}"
                                    Width="200"
                                    Height="50"
                                    FontSize="16"
                                    Background="#2C3E50"
                                    Foreground="White"
                                    Cursor="Hand" 
                                    Click="BtnJoinExisting_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ========== Section 2: Waiting ========== -->
                <Border x:Name="SectionWaiting"
                        Background="#DCE7F0"
                        CornerRadius="16"
                        Padding="60,50"
                        Visibility="Collapsed"
                        Margin="0,0,0,40">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="15" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Please Wait!" 
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Our Admin will confirm your company soon."
                                   FontSize="20"
                                   Foreground="#2C3E50"
                                   TextAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <Image Source="pack://application:,,,/Eaship;component/Assets/image_wait.png"
                               Width="420" Height="260"
                               Margin="0,0,0,30"/>

                        <ProgressBar IsIndeterminate="True"
                                     Width="400"
                                     Height="8"
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,25"/>

                        <TextBlock Text="Your company information has been submitted and is waiting for admin validation."
                                   FontSize="16"
                                   Foreground="#4A5568"
                                   TextWrapping="Wrap"
                                   Width="600"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>

                <!-- ========== Section 3: VERIFIED ========== -->
                <StackPanel x:Name="SectionVerified"
                            Visibility="Collapsed"
                            Margin="0,0,0,40">

                    <!-- HERO BANNER -->
                    <Border CornerRadius="15"
                            Height="280"
                            BorderBrush="#96B5D1"
                            BorderThickness="2"
                            Margin="0,0,0,40">

                        <Border.Background>
                            <ImageBrush ImageSource="/Eaship;component/Assets/wave.png" 
                                         Stretch="UniformToFill"
                                        AlignmentX="Center"
                                        AlignmentY="Center"/>
                        </Border.Background>

                        <Grid Margin="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="220"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Welcome Aboard!"
                                           FontSize="40"
                                           FontWeight="Bold"
                                           Foreground="#1C2A39"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Start Booking Your Vessel!"
                                           FontSize="24"
                                           Foreground="#44566C"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="Booking"
                                    Width="190"
                                    Height="60"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="#163A63"
                                    Foreground="White"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Click="BtnBooking_Click"/>
                        </Grid>
                    </Border>

                    <!-- API INFO CARDS GRID -->
                    <Grid Margin="0,0,0,40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- PORT 1 - TANJUNG PRIOK -->
                        <Border Grid.Column="0" Grid.Row="0"
                                Background="White"
                                Padding="24,20"
                                CornerRadius="12"
                                Margin="0,0,12,12"
                                Effect="{StaticResource Shadow}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Image Source="/Eaship;component/Assets/Icons/weather.jpg"
                                           Width="24" Height="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Tanjung Priok"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtP1Temp"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="TxtP1Wind"
                                           FontSize="13"
                                           Foreground="#718096"/>
                            </StackPanel>
                        </Border>

                        <!-- PORT 2 - TANJUNG PERAK -->
                        <Border Grid.Column="1" Grid.Row="0"
                                Background="White"
                                Padding="24,20"
                                CornerRadius="12"
                                Margin="0,0,12,12"
                                Effect="{StaticResource Shadow}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Image Source="/Eaship;component/Assets/Icons/weather.jpg"
                                           Width="24" Height="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Tanjung Perak"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtP2Temp"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="TxtP2Wind"
                                           FontSize="13"
                                           Foreground="#718096"/>
                            </StackPanel>
                        </Border>

                        <!-- PORT 3 - BALIKPAPAN -->
                        <Border Grid.Column="2" Grid.Row="0"
                                Background="White"
                                Padding="24,20"
                                CornerRadius="12"
                                Margin="0,0,0,12"
                                Effect="{StaticResource Shadow}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Image Source="/Eaship;component/Assets/Icons/weather.jpg"
                                           Width="24" Height="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Balikpapan"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtP3Temp"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="TxtP3Wind"
                                           FontSize="13"
                                           Foreground="#718096"/>
                            </StackPanel>
                        </Border>

                        <!-- PORT 4 - MAKASSAR -->
                        <Border Grid.Column="0" Grid.Row="1"
                                Background="White"
                                Padding="24,20"
                                CornerRadius="12"
                                Margin="0,0,12,12"
                                Effect="{StaticResource Shadow}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Image Source="/Eaship;component/Assets/Icons/weather.jpg"
                                           Width="24" Height="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Makassar"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtP4Temp"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="TxtP4Wind"
                                           FontSize="13"
                                           Foreground="#718096"/>
                            </StackPanel>
                        </Border>

                        <!-- PORT 5 - BELAWAN -->
                        <Border Grid.Column="1" Grid.Row="1"
                                Background="White"
                                Padding="24,20"
                                CornerRadius="12"
                                Margin="0,0,12,12"
                                Effect="{StaticResource Shadow}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Image Source="/Eaship;component/Assets/Icons/weather.jpg"
                                           Width="24" Height="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Belawan"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtP5Temp"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="TxtP5Wind"
                                           FontSize="13"
                                           Foreground="#718096"/>
                            </StackPanel>
                        </Border>

                        <!-- EXCHANGE RATE CARD -->
                        <Border Grid.Column="2" Grid.Row="1"
                                Background="White"
                                Padding="24,20"
                                CornerRadius="12"
                                Margin="0,0,0,12"
                                Effect="{StaticResource Shadow}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Image Source="/Eaship;component/Assets/Icons/exchange.jpg"
                                           Width="24" Height="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="USD → IDR"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtRateIDR"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="TxtRateLastUpdate"
                                           FontSize="13"
                                           Foreground="#718096"/>
                            </StackPanel>
                        </Border>

                        <!-- LOCAL TIME CARD -->
                        <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
                                Background="White"
                                Padding="24,20"
                                CornerRadius="12"
                                Effect="{StaticResource Shadow}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Image Source="/Eaship;component/Assets/Icons/clock.jpg"
                                           Width="24" Height="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Local Time"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                                        <TextBlock x:Name="TxtTime"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="TxtDate"
                                                   FontSize="13"
                                                   Foreground="#718096"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- NOTIFICATION SECTION -->
                    <TextBlock Text="Notification"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1C2A39"
                               Margin="0,0,0,16"/>

                    <Border Background="White"
                            CornerRadius="12"
                            Padding="24"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            Effect="{StaticResource Shadow}">

                        <StackPanel>
                            <TextBlock x:Name="TxtNotifTitle"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#1C2A39"
                                       Margin="0,0,0,12"/>

                            <TextBlock x:Name="TxtNotifMessage"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       Foreground="#4A5568"
                                       Margin="0,0,0,16"
                                       LineHeight="22"/>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,12">
                                <TextBlock x:Name="TxtNotifTime"
                                           FontSize="12"
                                           Foreground="#A0AEC0"/>
                                <TextBlock Text="•"
                                           FontSize="12"
                                           Foreground="#CBD5E0"
                                           Margin="8,0,8,0"/>
                                <TextBlock Text="New"
                                           FontSize="12"
                                           Foreground="#3182CE"
                                           FontWeight="Medium"/>
                            </StackPanel>

                            <Button Content="See All"
                                    HorizontalAlignment="Right"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#163A63"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Cursor="Hand"
                                    Click="BtnSeeAllNotification_Click"
                                    Padding="0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <!-- ========== Section 4: Rejected ========== -->
                <Border x:Name="SectionRejected"
                        Background="#FDECEC"
                        CornerRadius="16"
                        Padding="60,50"
                        Visibility="Collapsed"
                        Margin="0,0,0,40">

                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="15" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                        <TextBlock Text="Company Rejected"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#C53030"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Your company request has been rejected by our admin."
                                   FontSize="20"
                                   Foreground="#9B2C2C"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <Image Source="pack://application:,,,/Eaship;component/Assets/image_rejected.jpg"
                               Width="360" Height="220"
                               Margin="0,0,0,30"
                               Stretch="Uniform"/>

                        <TextBlock Text="Reason:"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#C53030"
                                   Margin="0,0,0,8"/>

                        <TextBlock x:Name="TxtRejectedReason"
                                   FontSize="16"
                                   Foreground="#742A2A"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,0,0,25"
                                   LineHeight="24"/>

                        <Button Content="Edit Company"
                                Width="260"
                                Height="50"
                                Background="#C53030"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                BorderThickness="0"
                                Click="BtnCreateCompany_Click"/>
                    </StackPanel>

                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D6E3F2" Margin="0,60,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved. Address Address"/>
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No. 01 | support@eaship.com" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>