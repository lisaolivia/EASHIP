<Page x:Class="Eaship.page.JoinCompanyForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="JoinCompanyForm">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- ===================== NAVBAR ===================== -->
        <controls:RenterNavbar Grid.Row="0"/>
        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,60" Grid.RowSpan="2">
            <!-- ================= CONTENT ================= -->
            <Grid Grid.Row="1" Margin="60,40,60,0">

                <Border Background="#DCE7F0"
                        CornerRadius="16"
                        Padding="50,40"
                        VerticalAlignment="Top"
                        MaxWidth="1080">

                    <StackPanel>

                        <!-- Title -->
                        <TextBlock Text="Join Existing Company"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <!-- Description -->
                        <TextBlock Text="Enter the Company ID provided by your administrator."
                                   FontSize="16"
                                   Foreground="#4A5568"
                                   Margin="0,0,0,30"/>

                        <!-- Company ID Input -->
                        <TextBlock Text="Company ID"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,8"/>

                        <TextBox x:Name="TxtJoinCode"
                                 Height="44"
                                 Padding="12,0"
                                 FontSize="14"
                                 Background="White"
                                 BorderBrush="#CBD5E0"
                                 BorderThickness="1"
                                 Margin="0,0,0,20"/>

                        <!-- Join Button -->
                            <Button Content="Join Company"
                                    Style="{StaticResource LogoutButton}"
                                    Width="200"
                                    Height="48"
                                    Background="#163A63"
                                    Foreground="White"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Click="JoinCompany_Click"/>

                    </StackPanel>
                </Border>
            </Grid>

        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D6E3F2" Margin="0,60,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                       Text="© 2000 - Company, Inc. All rights reserved. Address Address"/>
                <TextBlock Foreground="{StaticResource MutedBrush}" FontSize="12"
                       Text="+62812345 | Jl. Teti Sejati No. 01 | support@eaship.com" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
