<Page x:Class="Eaship.page.Renter.MyBookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="MyBookingPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <!-- NAVBAR -->
            <RowDefinition/>
            <!-- CONTENT -->
            <RowDefinition Height="120"/>
            <!-- FOOTER -->
        </Grid.RowDefinitions>

        <!-- ===================== NAVBAR ===================== -->
        <Border Background="{StaticResource NavyBrush}" Grid.Row="0">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Eaship;component/Assets/logo2.png"
                            Width="86" Height="59"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnBarges"
                             Style="{StaticResource NavButton}"
                             Content="Barges"
                             Click="BtnBarges_Click"/>

                    <Button x:Name="BtnMyBookings"
                                 Style="{StaticResource NavButton}"
                                 Content="My Bookings"
                                 Margin="6,0,0,0"
                                 Click="BtnMyBookings_Click"/>

                    <Button x:Name="BtnContract"
                             Style="{StaticResource NavButton}"
                             Content="Contract"
                             Margin="6,0,0,0"
                             Click="BtnContract_Click"/>

                    <Button x:Name="BtnNotif"
                             Style="{StaticResource NavButton}"
                             Content="Notifikasi"
                             Margin="6,0,0,0"
                             Click="BtnNotif_Click"/>

                    <Button x:Name="BtnProfile"
                             Style="{StaticResource OutlineButton}"
                             Content="Profile"
                             Margin="6,0,0,0"/>

                    <Button x:Name="BtnLogout"
                             Background="White"
                             Foreground="Navy"
                             Padding="12,6"
                             Content="Log Out"
                             Margin="6,0,0,0"
                             Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="60">

                <!-- TITLE -->
                <TextBlock Text="My Bookings"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1C2A39"/>

                <TextBlock Text="Track your billing status, due dates, and payment history"
                           FontSize="14"
                           Foreground="#6B7280"
                           Margin="0 0 0 30"/>

                <!-- BOOKING LIST -->
                <ItemsControl x:Name="BookingList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Border BorderBrush="#D6E4F0"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Margin="0 0 0 20"
                                    Padding="20"
                                    Background="White">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- LOGO -->
                                    <Image Source="/Eaship;component/Assets/mbss.png"
                                           Width="120" Height="70"/>

                                    <!-- MIDDLE CONTENT -->
                                    <StackPanel Grid.Column="1" Margin="15 0">

                                        <TextBlock Text="{Binding Route}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Margin="0 0 0 8"/>

                                        <TextBlock Text="{Binding Origin}" FontSize="14"/>
                                        <TextBlock Text="{Binding Destination}" FontSize="14" Margin="0 0 0 10"/>

                                        <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                            <TextBlock Text="Booking:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding BookingCode}" Margin="5 0 0 0"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                            <TextBlock Text="Due Date:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DueDate}" Margin="5 0 20 0"/>
                                            <TextBlock Text="Status:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Status}" Margin="5 0 0 0"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <!-- RIGHT CONTENT -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">

                                        <TextBlock Text="Freight Cost" FontSize="12" Foreground="#708090"/>
                                        <TextBlock Text="{Binding FreightCost}" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

                                        <TextBlock Text="Outstanding" FontSize="12" Foreground="#708090"/>
                                        <TextBlock Text="{Binding Outstanding}" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

                                        <Button Content="Download Invoice"
                                                Width="150" Height="32"
                                                Margin="0 5"
                                                Style="{StaticResource OutlineButton}"
                                                Tag="{Binding BookingId}"
                                                Click="BtnDownloadInvoice"/>

                                        <Button Content="Send to Email"
                                                Width="150" Height="32"
                                                Style="{StaticResource OutlineButton}"
                                                Tag="{Binding BookingId}"
                                                Click="BtnSendEmail"/>
                                    </StackPanel>

                                </Grid>

                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>


        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved. Address Address"/>
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No.01 | support@eaship.com"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

    </Grid>

</Page>
