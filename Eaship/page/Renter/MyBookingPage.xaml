<Page x:Class="Eaship.page.Renter.MyBookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1200" d:DesignHeight="800"
      Title="MyBookingPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- ===================== NAVBAR ===================== -->
        <controls:RenterNavbar Grid.Row="0"/>

        <!-- ===================== MAIN CONTENT ===================== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="60">

                <!-- Title -->
                <TextBlock Text="My Bookings"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1C2A39"/>

                <TextBlock Text="View and track the status of your submitted bookings"
                           FontSize="14"
                           Foreground="#6B7280"
                           Margin="0 0 0 30"/>

                <!-- BOOKING LIST -->
                <ItemsControl x:Name="BookingList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Border BorderBrush="#D6E4F0"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="20"
                                    Margin="0 0 0 20"
                                    Background="White">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- BOOKING ICON -->
                                    <Image Source="pack://application:,,,/Eaship;component/Assets/booking.jpg" Width="100" Height="60" Stretch="UniformToFill"/>


                                    <!-- MIDDLE CONTENT -->
                                    <StackPanel Grid.Column="1" Margin="15 0">

                                        <TextBlock Text="{Binding Route}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Margin="0 0 0 6"/>

                                        <TextBlock Text="{Binding Origin}" FontSize="14"/>
                                        <TextBlock Text="{Binding Destination}" FontSize="14" Margin="0 0 0 10"/>

                                        <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                                            <TextBlock Text="Booking:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding BookingCode}" Margin="5 0 0 0"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                                            <TextBlock Text="Start Date:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding StartDate}" Margin="5 0 20 0"/>

                                            <TextBlock Text="Status:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Status}" Margin="5 0 0 0"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <!-- RIGHT CONTENT (no price, no invoice) -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">

                                        <TextBlock Text="Your booking has been submitted"
                                                   FontSize="12"
                                                   Foreground="#708090"/>

                                        <TextBlock Text="Admin will review your request"
                                                   FontSize="12"
                                                   Foreground="#708090"/>

                                        <TextBlock Text="Please check status regularly"
                                                   FontSize="12"
                                                   Foreground="#708090"
                                                   Margin="0 0 0 10"/>

                                        <Button Content="View Contract"
                                                Width="150" Height="32"
                                                Style="{StaticResource CardActionButton}"
                                                Tag="{Binding BookingId}"
                                                Click="BtnViewContract"/>
                                    </StackPanel>

                                </Grid>
                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

        <!-- ===================== FOOTER ===================== -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved."/>
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No.01 | support@eaship.com"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

    </Grid>

</Page>
