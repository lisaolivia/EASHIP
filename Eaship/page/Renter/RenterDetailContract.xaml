<Page x:Class="Eaship.page.Renter.RenterDetailContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      
      xmlns:controls="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="RenterDetailContract">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <!-- NAVBAR -->
            <RowDefinition Height="*"/>
            <!-- CONTENT SCROLL -->
            <RowDefinition Height="Auto"/>
            <!-- FOOTER -->
        </Grid.RowDefinitions>


        <!-- ================= NAVBAR  ================= -->
        <controls:RenterNavbar Grid.Row="0"/>


        <!-- ================= CONTENT ================= -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="60">

                <!-- Title -->
                <TextBlock Text="Contract Detail"
                           FontWeight="Bold"
                           FontSize="28"
                           Foreground="#1C2A39"/>

                <TextBlock Text="View your contract details and document"
                           FontSize="14"
                           Foreground="#6B7280"
                           Margin="0 0 0 30"/>


                <!-- ===================== CONTRACT DATA CARD ===================== -->
                <Border BorderBrush="#D6E4F0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="25"
                        Background="White"
                        Margin="0 0 0 25">

                    <StackPanel>

                        <TextBlock Text="Contract Information"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Margin="0 0 0 20"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Contract ID:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtContractId" Margin="10 0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Origin:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtOrigin" Margin="10 0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Destination:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtDestination" Margin="10 0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Cargo:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtCargo" Margin="10 0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Status:" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtStatus" Margin="10 0" Foreground="DarkBlue"/>
                        </StackPanel>

                    </StackPanel>
                </Border>


                <!-- ===================== PDF VIEWER ===================== -->
                <TextBlock Text="Contract Document"
           FontWeight="Bold"
           FontSize="20"
           Margin="0 0 0 15"/>

                <Border BorderBrush="#D6E4F0"
        BorderThickness="1"
        CornerRadius="12"
        Background="White"
        Padding="20">

                    <!-- Wrapper untuk memastikan PDF tetap CENTER -->
                    <Grid HorizontalAlignment="Center">
                        <WebBrowser x:Name="PdfViewer"
                    Width="900"
                    Height="700"
                    HorizontalAlignment="Center"/>
                    </Grid>

                </Border>



            </StackPanel>
        </ScrollViewer>



        <!-- ================= FOOTER (Same as ContractPage) ================= -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved."/>
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No.01 | support@eaship.com"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
