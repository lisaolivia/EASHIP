<Page x:Class="Eaship.page.Renter.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="BookingPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- ===================== NAVBAR ===================== -->
        <Border Background="{StaticResource NavyBrush}" Grid.Row="0">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Eaship;component/Assets/logo2.png"
                           Width="86" Height="59"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Barges" Style="{StaticResource NavButton}" Click="BtnBarges_Click"/>
                    <Button Content="My Bookings" Style="{StaticResource NavButton}" Margin="6,0,0,0" Click="BtnMyBookings_Click"/>
                    <Button Content="Contract" Style="{StaticResource NavButton}" Margin="6,0,0,0" Click="BtnContract_Click"/>
                    <Button Content="Notifikasi" Style="{StaticResource NavButton}" Margin="6,0,0,0" Click="BtnNotif_Click"/>
                    <Button Content="Profile" Style="{StaticResource OutlineButton}" Margin="6,0,0,0" Click="BtnProfile_Click"/>
                    <Button Content="Log Out" Background="White" Foreground="Navy"
                            Padding="12,6" Margin="6,0,0,0" Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>


        <!-- ===================== CONTENT ===================== -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="60,40,60,40">

                <TextBlock Text="Booking your Tongkang"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 40"/>

                <Border BorderBrush="#D2B6FF" BorderThickness="2" CornerRadius="12" Padding="40">

                    <StackPanel Width="600" HorizontalAlignment="Center">

                        <!-- ORIGIN PORT -->
                        <TextBlock Text="Origin Port" FontWeight="Bold" Margin="0 0 0 6"/>
                        <TextBox x:Name="TxtOrigin" Height="40" Margin="0 0 0 20"/>

                        <!-- DESTINATION -->
                        <TextBlock Text="Destination Port" FontWeight="Bold" Margin="0 0 0 6"/>
                        <TextBox x:Name="TxtDestination" Height="40" Margin="0 0 0 20"/>

                        <!-- START DATE -->
                        <TextBlock Text="Start Date" FontWeight="Bold" Margin="0 0 0 6"/>
                        <DatePicker x:Name="DpStartDate" Height="40" Margin="0 0 0 20"/>

                        <!-- DURASI HARI -->
                        <TextBlock Text="Duration (Days)" FontWeight="Bold" Margin="0 0 0 6"/>
                        <TextBox x:Name="TxtDuration" Height="40" Margin="0 0 0 20"/>

                        <!-- CARGO DESCRIPTION -->
                        <TextBlock Text="Cargo Description" FontWeight="Bold" Margin="0 0 0 6"/>
                        <TextBox x:Name="TxtCargo" Height="40" Margin="0 0 0 30"/>


                        <!-- Submit -->
                        <Button Content="Submit Booking"
                                Height="45"
                                Background="{StaticResource NavyBrush}"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="BtnSubmit_Click"/>
                    </StackPanel>

                </Border>

            </StackPanel>
        </ScrollViewer>


        <!-- ===================== FOOTER ===================== -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="© 2000 - Company, Inc. All rights reserved." FontSize="12" Foreground="#6B7280"/>
                <TextBlock Text="+62812345 | Jl. Teti Sejati No.01 | support@eaship.com" FontSize="12" Foreground="#6B7280" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
