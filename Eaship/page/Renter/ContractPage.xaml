<Page x:Class="Eaship.page.Renter.ContractPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:Eaship.page.Controls"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="ContractPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Eaship;component/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>


        <!-- ===================== NAVBAR ===================== -->
        <controls:RenterNavbar Grid.Row="0"/>



        <!-- ===================== CONTENT ===================== -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="60">

                <TextBlock Text="Contract"
                           FontWeight="Bold"
                           FontSize="28"
                           Foreground="#1C2A39"/>

                <TextBlock Text="Track your billing status, due dates, and payment history"
                           FontSize="14"
                           Foreground="#6B7280"
                           Margin="0 0 0 30"/>


                <!-- ===== CONTRACT LIST ===== -->
                <ItemsControl x:Name="ContractList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Border BorderBrush="#D6E4F0"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Margin="0 0 0 20"
                                    Padding="20"
                                    Background="White">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Logo -->
                                    <Image Source="pack://application:,,,/Eaship;component/Assets/mbss.jpg"
                                             Width="120" Height="70"/>


                                    <!-- Middle Content -->
                                    <StackPanel Grid.Column="1" Margin="15 0">

                                        <TextBlock Text="{Binding Route}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Margin="0 0 0 8"/>

                                        <TextBlock Text="{Binding Origin}" FontSize="14"/>
                                        <TextBlock Text="{Binding Destination}" FontSize="14" Margin="0 0 0 10"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Booking:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding BookingCode}" Margin="5 0 0 0"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Due Date:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DueDate}" Margin="5 0 20 0"/>
                                            <TextBlock Text="Status:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Status}" Margin="5 0 0 0"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <!-- Right Action Panel -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">

                                        <!-- Info no payment -->
                                        <TextBlock Text="Kontrak telah dibuat"
                                                   FontSize="12"
                                                   Foreground="#708090"
                                                   Margin="0 0 0 4"/>

                                        <TextBlock Text="Untuk biaya pembayaran"
                                                   FontSize="12"
                                                   Foreground="#708090"/>

                                        <TextBlock Text="silakan hubungi admin."
                                                   FontSize="12"
                                                   Foreground="#708090"
                                                   Margin="0 0 0 10"/>

                                        <Button Content="Download Contract"
                                                Width="150" Height="32"
                                                Margin="0 5"
                                                Style="{StaticResource CardActionButton}"
                                                Tag="{Binding PdfPath}"
                                                Click="BtnOpenPdf"/>

                                        <Button Content="Detail"
                                                Width="150" Height="32"
                                                Margin="0 5"
                                                Style="{StaticResource CardActionButton}"
                                                Tag="{Binding ContractId}"
                                                Click="BtnDetail_Click"/>
                                    </StackPanel>


                                </Grid>

                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>




        <!-- ===================== FOOTER ===================== -->
        <Border Grid.Row="2" Background="#D6E3F2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="© 2000 - Company, Inc. All rights reserved."/>
                <TextBlock Foreground="{StaticResource MutedBrush}"
                           FontSize="12"
                           Text="+62812345 | Jl. Teti Sejati No.01 | support@eaship.com"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
